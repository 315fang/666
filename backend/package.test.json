{
  "name": "backend-tests",
  "version": "1.0.0",
  "description": "Backend unit tests",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "services/**/*.js",
      "controllers/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "devDependencies": {
    "jest": "^29.5.0"
  }
}
