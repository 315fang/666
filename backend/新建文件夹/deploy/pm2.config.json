{
    "apps": [
        {
            "name": "s2b2c-api",
            "script": "server.js",
            "cwd": "/www/backend",
            "instances": 1,
            "exec_mode": "fork",
            "env": {
                "NODE_ENV": "production",
                "PORT": 3000
            },
            "max_memory_restart": "300M",
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "error_file": "/www/backend/logs/error.log",
            "out_file": "/www/backend/logs/out.log",
            "merge_logs": true,
            "restart_delay": 3000,
            "max_restarts": 10
        }
    ]
}
