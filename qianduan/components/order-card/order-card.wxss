.order-card {
  background: var(--luxury-white);
  border-radius: var(--radius-2xl);
  margin-bottom: var(--space-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--luxury-warm-gray);
}

/* 订单头部 - 轻奢风格 */
.order-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-md);
  background: var(--luxury-ivory);
  border-bottom: 1rpx solid var(--luxury-warm-gray);
}

.order-card__number {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  font-weight: var(--font-medium);
}

.order-card__number::before {
  content: '订单号: ';
  color: var(--text-muted);
  font-weight: var(--font-normal);
}

.order-card__status {
  font-size: var(--text-xs);
  padding: var(--space-2xs) var(--space-sm);
  border-radius: var(--radius-full);
  font-weight: var(--font-semibold);
}

.order-card__status--pending {
  color: var(--color-warning);
  background: var(--color-warning-bg);
}

.order-card__status--paid {
  color: var(--color-success);
  background: var(--color-success-bg);
}

.order-card__status--shipped {
  color: var(--luxury-gold);
  background: var(--luxury-gold-bg-light);
}

.order-card__status--completed {
  color: var(--color-success);
  background: var(--color-success-bg);
}

.order-card__status--cancelled,
.order-card__status--refunded {
  color: var(--text-muted);
  background: var(--luxury-ivory);
}

/* 商品列表 */
.order-card__items {
  padding: var(--space-md);
}

.order-card__item {
  display: flex;
  margin-bottom: var(--space-md);
  padding: var(--space-sm);
  background: var(--luxury-cream);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--luxury-warm-gray);
}

.order-card__item:last-child {
  margin-bottom: 0;
}

.order-card__item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-lg);
  margin-right: var(--space-sm);
  flex-shrink: 0;
  background: var(--luxury-ivory);
}

.order-card__item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.order-card__item-name {
  font-size: var(--text-sm);
  color: var(--text-primary);
  font-weight: var(--font-medium);
  line-height: var(--leading-snug);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: var(--space-xs);
}

.order-card__item-spec {
  font-size: var(--text-xs);
  color: var(--text-muted);
  margin-bottom: var(--space-xs);
  background: var(--luxury-white);
  padding: var(--space-2xs) var(--space-xs);
  border-radius: var(--radius-xs);
  display: inline-block;
  border: 1rpx solid var(--luxury-border);
}

.order-card__item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.order-card__item-price {
  font-size: var(--text-base);
  color: var(--luxury-gold);
  font-weight: var(--font-bold);
  font-family: var(--font-display);
}

.order-card__item-quantity {
  font-size: var(--text-xs);
  color: var(--text-muted);
  background: var(--luxury-white);
  padding: var(--space-2xs) var(--space-xs);
  border-radius: var(--radius-xs);
  border: 1rpx solid var(--luxury-border);
}

/* 订单总额 */
.order-card__footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: var(--space-md);
  background: var(--luxury-white);
  border-top: 1rpx solid var(--luxury-warm-gray);
}

.order-card__total-label {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  margin-right: var(--space-xs);
}

.order-card__total-count {
  font-size: var(--text-xs);
  color: var(--text-muted);
  margin-right: var(--space-sm);
}

.order-card__total-price {
  font-size: var(--text-xl);
  color: var(--luxury-gold);
  font-weight: var(--font-bold);
  font-family: var(--font-display);
}

/* 操作按钮 - 轻奢风格 */
.order-card__actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-sm);
  padding: var(--space-md);
  background: var(--luxury-white);
  border-top: 1rpx solid var(--luxury-warm-gray);
}

.order-card__action-btn {
  padding: var(--space-xs) var(--space-md);
  font-size: var(--text-sm);
  border-radius: var(--radius-full);
  border: none;
  line-height: 1.2;
  font-weight: var(--font-medium);
  transition: all var(--duration-fast);
}

.order-card__action-btn:active {
  transform: scale(0.95);
}

.order-card__action-btn::after {
  border: none;
}

.order-card__action-btn--primary {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
  color: var(--luxury-white);
  box-shadow: var(--shadow-gold);
}

.order-card__action-btn--secondary {
  background: var(--luxury-white);
  color: var(--text-secondary);
  border: 1rpx solid var(--luxury-border) !important;
}

.order-card__action-btn--secondary:active {
  background: var(--luxury-ivory);
}
