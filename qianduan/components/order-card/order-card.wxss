.order-card {
  background: #fff;
  border-radius: 32rpx;  /* 统一大圆角 */
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.04);  /* 弥散阴影 */
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

/* 订单头部 - 大厂风格 */
.order-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  background: linear-gradient(to right, #fafafa, #ffffff);
  border-bottom: 1rpx solid #f5f5f5;
}

.order-card__number {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.order-card__number::before {
  content: '订单号: ';
  color: #999;
  font-weight: normal;
}

.order-card__status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-weight: 600;
}

.order-card__status--pending {
  color: #ff9500;
  background: rgba(255, 149, 0, 0.1);
}

.order-card__status--paid {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.order-card__status--shipped {
  color: #4F46E5;
  background: rgba(79, 70, 229, 0.1);
}

.order-card__status--completed {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.order-card__status--cancelled,
.order-card__status--refunded {
  color: #999;
  background: #f5f5f5;
}

/* 商品列表 - 块状分隔 */
.order-card__items {
  padding: 24rpx 32rpx;
}

.order-card__item {
  display: flex;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: #fafafa;
  border-radius: 20rpx;
}

.order-card__item:last-child {
  margin-bottom: 0;
}

.order-card__item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: #f0f0f0;
}

.order-card__item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.order-card__item-name {
  font-size: 26rpx;
  color: #1a1a1a;
  font-weight: 500;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.order-card__item-spec {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  display: inline-block;
}

.order-card__item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.order-card__item-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 700;
  font-family: 'DIN Condensed', sans-serif;
}

.order-card__item-quantity {
  font-size: 24rpx;
  color: #999;
  background: #fff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* 订单总额 - 更醒目的设计 */
.order-card__footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 24rpx 32rpx;
  background: linear-gradient(to right, #ffffff, #fafafa);
  border-top: 1rpx solid #f5f5f5;
}

.order-card__total-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.order-card__total-count {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.order-card__total-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: 700;
  font-family: 'DIN Condensed', sans-serif;
}

/* 操作按钮 - 大厂风格 */
.order-card__actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  border-top: 1rpx solid #f5f5f5;
}

.order-card__action-btn {
  padding: 14rpx 32rpx;
  font-size: 26rpx;
  border-radius: 999rpx;  /* 胶囊按钮 */
  border: none;
  line-height: 1.2;
  font-weight: 500;
  transition: all 0.2s;
}

.order-card__action-btn:active {
  transform: scale(0.95);
}

.order-card__action-btn::after {
  border: none;
}

.order-card__action-btn--primary {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.25);
}

.order-card__action-btn--secondary {
  background: #fff;
  color: #666;
  border: 1rpx solid #e0e0e0 !important;
}

.order-card__action-btn--secondary:active {
  background: #f5f5f5;
}
