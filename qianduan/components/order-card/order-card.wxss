.order-card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 订单头部 */
.order-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-card__number {
  font-size: 28rpx;
  color: #666;
}

.order-card__status {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

.order-card__status--pending {
  color: #ff9500;
  background: #fff5e6;
}

.order-card__status--paid {
  color: #07c160;
  background: #e6f7f0;
}

.order-card__status--shipped {
  color: #576b95;
  background: #e6ebf5;
}

.order-card__status--completed {
  color: #666;
  background: #f5f5f5;
}

.order-card__status--cancelled,
.order-card__status--refunded {
  color: #999;
  background: #f5f5f5;
}

/* 商品列表 */
.order-card__items {
  padding: 24rpx;
}

.order-card__item {
  display: flex;
  margin-bottom: 24rpx;
}

.order-card__item:last-child {
  margin-bottom: 0;
}

.order-card__item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.order-card__item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.order-card__item-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.order-card__item-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.order-card__item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.order-card__item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.order-card__item-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单总额 */
.order-card__footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-card__total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.order-card__total-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: 600;
}

/* 操作按钮 */
.order-card__actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-card__action-btn {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  line-height: 1.2;
}

.order-card__action-btn::after {
  border: none;
}

.order-card__action-btn--primary {
  background: #07c160;
  color: #fff;
}

.order-card__action-btn--secondary {
  background: #fff;
  color: #666;
  border: 1rpx solid #e0e0e0 !important;
}
