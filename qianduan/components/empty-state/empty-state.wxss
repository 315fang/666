.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  min-height: 500rpx;
}

.empty-state__icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-state__title {
  font-size: 32rpx;
  color: var(--color-text-main);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-state__description {
  font-size: 28rpx;
  color: var(--color-text-muted);
  text-align: center;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.empty-state__button {
  background-color: var(--color-primary);
  color: #fff;
  border-radius: var(--radius-sm);
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  border: none;
  transition: all var(--duration-fast);
}

.empty-state__button:active {
  transform: var(--transform-scale-press);
  opacity: 0.9;
}

.empty-state__button::after {
  border: none;
}
