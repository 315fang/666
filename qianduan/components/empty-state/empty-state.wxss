.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-3xl) var(--space-lg);
  min-height: 500rpx;
  background: var(--luxury-cream);
}

.empty-state__icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: var(--space-md);
  opacity: 0.4;
  filter: drop-shadow(0 8rpx 16rpx rgba(202, 138, 4, 0.1));
}

.empty-state__title {
  font-size: var(--text-xl);
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
  font-weight: var(--font-semibold);
}

.empty-state__description {
  font-size: var(--text-sm);
  color: var(--text-muted);
  text-align: center;
  line-height: var(--leading-relaxed);
  margin-bottom: var(--space-lg);
}

.empty-state__button {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
  color: var(--luxury-white);
  border-radius: var(--radius-full);
  padding: var(--space-sm) var(--space-xl);
  font-size: var(--text-base);
  border: none;
  font-weight: var(--font-semibold);
  box-shadow: var(--shadow-gold);
  transition: all var(--duration-fast);
}

.empty-state__button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 12rpx rgba(202, 138, 4, 0.3);
}

.empty-state__button::after {
  border: none;
}
