/* components/product-card/product-card.wxss */
.card {
  background: var(--card-surface);
  border-radius: var(--card-radius-sm);
  overflow: hidden;
  box-shadow: var(--shadow-product);
  display: flex;
  flex-direction: column;
  height: 100%;
  transition: all var(--duration-normal) var(--ease-smooth);
}

.card-hover:active {
  transform: translateY(-8rpx) var(--transform-scale-hover);
  box-shadow: var(--card-shadow-hover);
}

/* Vertical Mode (Default) */
.card-vertical .image-wrapper {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* Aspect Square */
  background: var(--bg-gradient-subtle);
  overflow: hidden;
}

.card-vertical .image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--duration-slow) var(--ease-smooth);
}

.card-hover:active .image {
  transform: var(--transform-scale-pop);
}

/* Horizontal Mode */
.card-horizontal {
  flex-direction: row;
  height: auto;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  border-bottom: 1px solid var(--color-divider);
}

.card-horizontal .image-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  background: var(--bg-gradient-subtle);
}

.card-horizontal .image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* NEW Badge with Gradient */
.new-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: var(--bg-gradient-red);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: var(--radius-md);
  font-weight: 700;
  z-index: 10;
  box-shadow: var(--shadow-red);
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.content {
  padding: var(--card-padding-sm);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
  background: var(--bg-gradient-card);
}

.card-horizontal .content {
  padding: 16rpx 24rpx;
  gap: 8rpx;
  background: var(--card-surface);
}

.title {
  color: var(--color-secondary);
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  transition: color var(--duration-fast);
}

.card-hover:active .title {
  color: var(--color-primary);
}

.card-vertical .title {
  height: 72rpx; /* 2 lines approx */
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  color: var(--color-text-sub);
  background: var(--bg-gradient-tag);
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: var(--radius-sm);
  font-weight: 500;
  border: 1rpx solid var(--color-border);
  transition: all var(--duration-fast);
}

.tag:active {
  background: var(--bg-gradient-subtle);
  transform: scale(0.95);
}

.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  padding-top: 8rpx;
  border-top: 1rpx solid var(--color-divider);
}

.price-box {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 4rpx;
}

.currency {
  color: var(--color-accent);
  font-size: 22rpx;
  font-weight: 700;
  margin-right: 2rpx;
}

.price {
  color: var(--color-accent);
  font-size: 36rpx;
  font-weight: 800;
  font-family: var(--font-display);
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(217, 119, 6, 0.1);
}

.original-price {
  color: var(--color-text-muted);
  font-size: 22rpx;
  text-decoration: line-through;
  margin-left: 8rpx;
  opacity: 0.7;
}

.buy-btn {
  background: var(--bg-gradient-midnight);
  color: #fff;
  font-size: 22rpx;
  padding: 10rpx 20rpx;
  border-radius: var(--radius-full);
  font-weight: 600;
  box-shadow: var(--shadow-md);
  transition: all var(--duration-fast);
}

.buy-btn:active {
  background: var(--bg-gradient-midnight-reverse);
  transform: scale(0.95);
  box-shadow: var(--shadow-lg);
}

.card-horizontal .buy-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* Loading skeleton animation */
@keyframes shimmer {
  0% {
    background-position: -468rpx 0;
  }
  100% {
    background-position: 468rpx 0;
  }
}

.card.loading .image-wrapper {
  background: linear-gradient(to right, #f1f5f9 0%, #e2e8f0 50%, #f1f5f9 100%);
  background-size: 936rpx 100%;
  animation: shimmer 2s infinite;
}
