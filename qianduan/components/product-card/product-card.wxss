/* components/product-card/product-card.wxss */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(15,23,42,0.05);
  display: flex;
  flex-direction: column;
  height: 100%;
}

.card-hover:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.image-wrapper {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* Aspect Square */
  background: #F1F5F9;
}

.image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.new-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: var(--color-primary);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 700;
  z-index: 10;
}

.content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
}

.title {
  color: var(--color-secondary);
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.4;
  height: 72rpx; /* 2 lines approx */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  color: var(--color-text-sub);
  background: var(--color-bg-subtle);
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.price-box {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 4rpx;
}

.currency {
  color: var(--color-accent);
  font-size: 20rpx;
  font-weight: 700;
}

.price {
  color: var(--color-accent);
  font-size: 32rpx;
  font-weight: 700;
  font-family: 'DIN Condensed', sans-serif;
}

.original-price {
  color: var(--color-text-muted);
  font-size: 20rpx;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.buy-btn {
  background: var(--color-secondary);
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  font-weight: 500;
}
