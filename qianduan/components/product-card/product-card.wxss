/* components/product-card/product-card.wxss - 轻奢风产品卡片 */

.card {
  background: var(--luxury-white);
  border-radius: var(--radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  display: flex;
  flex-direction: column;
  height: 100%;
  transition: all var(--duration-normal) var(--ease-smooth);
  border: 1rpx solid var(--luxury-warm-gray);
}

.card-hover:active {
  transform: translateY(-8rpx);
  box-shadow: var(--shadow-lg);
}

/* Vertical Mode (Default) */
.card-vertical .image-wrapper {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* Aspect Square */
  background: var(--luxury-ivory);
  overflow: hidden;
}

.card-vertical .image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--duration-slow) var(--ease-smooth);
}

.card-hover:active .image {
  transform: scale(1.05);
}

/* Horizontal Mode */
.card-horizontal {
  flex-direction: row;
  height: auto;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--luxury-warm-gray);
}

.card-horizontal .image-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  background: var(--luxury-ivory);
}

.card-horizontal .image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* NEW Badge - 金色奢华 */
.new-tag {
  position: absolute;
  top: var(--space-sm);
  left: var(--space-sm);
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
  color: var(--luxury-white);
  font-size: var(--text-xs);
  padding: var(--space-2xs) var(--space-xs);
  border-radius: var(--radius-sm);
  font-weight: var(--font-bold);
  z-index: 10;
  box-shadow: var(--shadow-gold);
  letter-spacing: var(--tracking-wider);
  text-transform: uppercase;
}

.content {
  padding: var(--space-sm);
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  flex: 1;
  background: var(--luxury-white);
}

.card-horizontal .content {
  padding: var(--space-sm) var(--space-md);
  gap: var(--space-xs);
  background: var(--luxury-white);
}

.title {
  color: var(--text-primary);
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  line-height: var(--leading-snug);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  transition: color var(--duration-fast);
}

.card-hover:active .title {
  color: var(--luxury-gold);
}

.card-vertical .title {
  height: 72rpx; /* 2 lines approx */
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2xs);
}

.tag {
  color: var(--text-secondary);
  background: var(--luxury-ivory);
  font-size: var(--text-xs);
  padding: var(--space-2xs) var(--space-xs);
  border-radius: var(--radius-xs);
  font-weight: var(--font-medium);
  border: 1rpx solid var(--luxury-border);
  transition: all var(--duration-fast);
}

.tag:active {
  background: var(--luxury-gold-bg-light);
  border-color: var(--luxury-gold);
  color: var(--luxury-gold);
  transform: scale(0.95);
}

.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  padding-top: var(--space-xs);
  border-top: 1rpx solid var(--luxury-warm-gray);
}

.price-box {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: var(--space-2xs);
}

.currency {
  color: var(--luxury-gold);
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
  margin-right: var(--space-2xs);
}

.price {
  color: var(--luxury-gold);
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  font-family: var(--font-display);
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(202, 138, 4, 0.15);
}

.original-price {
  color: var(--text-muted);
  font-size: var(--text-xs);
  text-decoration: line-through;
  margin-left: var(--space-xs);
  opacity: 0.7;
}

.buy-btn {
  background: linear-gradient(135deg, var(--luxury-black) 0%, var(--luxury-black-light) 100%);
  color: var(--luxury-white);
  font-size: var(--text-xs);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-full);
  font-weight: var(--font-semibold);
  box-shadow: var(--shadow-dark);
  transition: all var(--duration-fast);
}

.buy-btn:active {
  background: var(--luxury-black);
  transform: scale(0.95);
  box-shadow: var(--shadow-dark-lg);
}

.card-horizontal .buy-btn {
  padding: var(--space-xs) var(--space-md);
  font-size: var(--text-sm);
}

/* Loading skeleton animation */
@keyframes shimmer {
  0% {
    background-position: -468rpx 0;
  }
  100% {
    background-position: 468rpx 0;
  }
}

.card.loading .image-wrapper {
  background: linear-gradient(to right, var(--luxury-ivory) 0%, var(--luxury-warm-gray) 50%, var(--luxury-ivory) 100%);
  background-size: 936rpx 100%;
  animation: shimmer 2s infinite;
}
