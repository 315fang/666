/* components/bubble-notice/bubble-notice.wxss */
.bubble-wrap {
  position: fixed;
  top: 120rpx;
  left: 24rpx;
  right: 24rpx;
  z-index: 999;
  opacity: 0;
  transform: translateY(-16rpx);
  transition: opacity 0.35s ease, transform 0.35s ease;
  pointer-events: none;
}

.bubble-wrap.visible {
  opacity: 1;
  transform: translateY(0);
}

.bubble-inner {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(26, 26, 26, 0.82);
  backdrop-filter: blur(12px);
  border-radius: 50rpx;
  padding: 16rpx 28rpx;
  max-width: 580rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.bubble-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #D4A84B;
  flex-shrink: 0;
  animation: pulse 1.5s ease infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(0.8); }
}

.bubble-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.92);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 500rpx;
}
