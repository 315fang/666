/* 基础骨架屏样式 */
.loading-skeleton {
  padding: 20rpx;
}

/* 骨架屏动画 */
@keyframes skeleton-loading {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.skeleton-line,
.skeleton-image,
.skeleton-avatar {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

/* 商品卡片骨架屏 */
.skeleton-product-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.skeleton-product-card .skeleton-image {
  width: 100%;
  height: 320rpx;
  border-radius: 0;
}

.skeleton-product-card .skeleton-content {
  padding: 24rpx;
}

/* 列表项骨架屏 */
.skeleton-list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

/* 订单卡片骨架屏 */
.skeleton-order-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.skeleton-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.skeleton-order-item {
  display: flex;
  padding: 24rpx 0;
}

.skeleton-order-item .skeleton-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.skeleton-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 24rpx;
}

.skeleton-divider {
  height: 1rpx;
  background: #f0f0f0;
}

/* 骨架屏线条样式 */
.skeleton-content {
  flex: 1;
  min-width: 0;
}

.skeleton-line {
  height: 32rpx;
  margin-bottom: 16rpx;
}

.skeleton-line:last-child {
  margin-bottom: 0;
}

.skeleton-line--title {
  width: 80%;
  height: 36rpx;
}

.skeleton-line--subtitle {
  width: 60%;
  height: 28rpx;
}

.skeleton-line--price {
  width: 40%;
  height: 40rpx;
}

.skeleton-line--short {
  width: 30%;
  height: 28rpx;
}

.skeleton-line--badge {
  width: 80rpx;
  height: 36rpx;
  border-radius: 18rpx;
}

/* 自定义骨架屏 */
.skeleton-custom {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}
