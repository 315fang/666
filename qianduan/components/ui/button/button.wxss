/* components/ui/button/button.wxss */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  font-weight: 600;
  transition: all 0.2s;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

/* Variants */
.btn-default {
  background-color: var(--color-primary);
  color: #FFFFFF;
  box-shadow: var(--shadow-blue);
}

.btn-secondary {
  background-color: var(--color-secondary);
  color: #FFFFFF;
  box-shadow: var(--shadow-lg);
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid var(--color-border);
  color: var(--color-text-main);
}

.btn-ghost {
  background-color: transparent;
  color: var(--color-text-main);
}

.btn-amber {
  background-color: var(--color-accent);
  color: #FFFFFF;
  box-shadow: var(--shadow-amber);
}

/* Sizes */
.btn-default-size {
  height: 88rpx;
  padding: 0 48rpx;
  font-size: 28rpx;
}

.btn-sm {
  height: 64rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.btn-lg {
  height: 100rpx;
  padding: 0 64rpx;
  font-size: 32rpx;
}

.btn-icon {
  width: 88rpx;
  height: 88rpx;
  padding: 0;
}

/* Disabled */
.btn-disabled {
  background-color: var(--color-border) !important;
  color: var(--color-text-muted) !important;
  box-shadow: none !important;
  pointer-events: none;
}
