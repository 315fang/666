/* pages/activity/activity.wxss */

.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

/* ===== 气泡占位 ===== */
.bubble-placeholder {
  height: 0;
}

/* ===== 页面标题 ===== */
.page-header {
  padding: 40rpx 30rpx 24rpx;
}

.header-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.header-accent-bar,
.section-header .header-accent-bar {
  width: 6rpx;
  height: 32rpx;
  border-radius: 3rpx;
  background: linear-gradient(180deg, #D4A84B 0%, #F0C96A 100%);
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.header-subtitle {
  font-size: 24rpx;
  color: #999;
  padding-left: 18rpx;
}

/* ===== 活动卡片 ===== */
.activity-card {
  position: relative;
  margin: 0 30rpx 24rpx;
  border-radius: 24rpx;
  padding: 36rpx 30rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  cursor: pointer;
}

.activity-card:active {
  opacity: 0.9;
  transform: scale(0.99);
}

.group-buy-card {
  background: linear-gradient(135deg, #1A3A5C 0%, #0F2027 100%);
}

.slash-card {
  background: linear-gradient(135deg, #7B2D8B 0%, #3D0D5A 100%);
}

.lottery-card {
  background: linear-gradient(135deg, #B71C1C 0%, #6D0A0A 100%);
}

.card-deco-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.07);
}

.activity-card .c1 {
  width: 240rpx;
  height: 240rpx;
  top: -80rpx;
  right: -60rpx;
}

.activity-card .c2 {
  width: 140rpx;
  height: 140rpx;
  bottom: -50rpx;
  left: 20rpx;
}

.card-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  position: relative;
  z-index: 2;
}

.card-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 22rpx;
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.card-icon {
  width: 44rpx;
  height: 44rpx;
  filter: brightness(0) invert(1);
}

.card-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.card-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}

.card-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  width: fit-content;
}

.coming-soon {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.9);
}

.card-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  position: relative;
  z-index: 2;
  filter: brightness(0) invert(1);
  flex-shrink: 0;
}

/* ===== 近期动态 ===== */
.recent-section {
  margin: 16rpx 30rpx 0;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recent-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.recent-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #D4A84B;
  flex-shrink: 0;
}

.recent-text {
  font-size: 24rpx;
  color: #444;
  flex: 1;
  line-height: 1.4;
}

.recent-time {
  font-size: 20rpx;
  color: #BBB;
  flex-shrink: 0;
}

.safe-area-bottom {
  height: 40rpx;
}
