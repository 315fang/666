/** pages/index/index.wxss **/

/* 1. Custom Header */
.custom-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  transition: background-color 0.3s, backdrop-filter 0.3s;
}

.header-scrolled {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid var(--color-border);
}

.header-content {
  height: 88rpx; /* Standard nav bar height */
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 24rpx;
}

.search-bar {
  flex: 1;
  height: 72rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  transition: background-color 0.3s;
}

.bg-black-10 { background-color: rgba(0, 0, 0, 0.1); }
.bg-slate-100 { background-color: #F1F5F9; }

.search-icon { font-size: 32rpx; margin-right: 16rpx; }
.scan-icon { font-size: 32rpx; margin-left: 16rpx; }

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.placeholder-white-70 { color: rgba(255, 255, 255, 0.7); }
.placeholder-slate-400 { color: #94A3B8; }

.text-white { color: #ffffff; }
.text-slate-500 { color: #64748B; }
.text-slate-900 { color: #0F172A; }

.header-right {
  display: flex;
  align-items: center;
}

.bell-icon-box {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bell-icon { font-size: 40rpx; }

.dot {
  position: absolute;
  top: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background-color: #EF4444;
  border: 4rpx solid #ffffff;
  border-radius: 50%;
}

/* 2. Banner */
.banner-section {
  position: relative;
  width: 100%;
  height: 420rpx; /* Matches Figma 420rpx */
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, transparent 40%, rgba(0,0,0,0.6) 100%);
}

.banner-text {
  position: absolute;
  bottom: 64rpx;
  left: 48rpx;
  color: #ffffff;
}

.banner-tag {
  font-size: 24rpx;
  letter-spacing: 4rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.banner-title {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.2;
}

/* 3. Grid Nav */
.nav-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
  padding: 48rpx 32rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.nav-icon-box {
  width: 112rpx;
  height: 112rpx;
  border-radius: 32rpx; /* rounded-2xl */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #334155;
}

/* 4. Tabs */
.tab-scroll {
  white-space: nowrap;
  padding: 0 32rpx 32rpx;
  display: flex;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 40rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-right: 24rpx;
  background-color: #F1F5F9;
  color: #64748B;
  transition: all 0.2s;
  height: 72rpx; /* Fixed height for better centering */
  box-sizing: border-box;
}

.tab-item.active {
  background-color: #0F172A;
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.2);
}

/* 5. Product Grid */
.product-grid {
  padding: 0 32rpx 48rpx;
  display: flex;
  gap: 24rpx;
}

.grid-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* Loading */
.loading-footer {
  padding: 40rpx;
  display: flex;
  justify-content: center;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
