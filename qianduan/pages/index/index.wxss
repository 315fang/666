/** pages/index/index.wxss **/

/* 1. Custom Header */
.custom-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  transition: background-color 0.3s, backdrop-filter 0.3s;
}

.header-scrolled {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid var(--color-border);
}

.header-content {
  height: 88rpx; /* Standard nav bar height */
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 24rpx;
}

.search-bar {
  flex: 1;
  height: 72rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  transition: background-color 0.3s;
}

.bg-black-10 { background-color: rgba(0, 0, 0, 0.1); }
.bg-slate-100 { background-color: #F1F5F9; }

.search-icon { font-size: 32rpx; margin-right: 16rpx; }
.scan-icon { font-size: 32rpx; margin-left: 16rpx; }

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.placeholder-white-70 { color: rgba(255, 255, 255, 0.7); }
.placeholder-slate-400 { color: #94A3B8; }

.text-white { color: #ffffff; }
.text-slate-500 { color: #64748B; }
.text-slate-900 { color: #0F172A; }

.header-right {
  display: flex;
  align-items: center;
}

.bell-icon-box {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bell-icon { font-size: 40rpx; }

.dot {
  position: absolute;
  top: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background-color: #EF4444;
  border: 4rpx solid #ffffff;
  border-radius: 50%;
}

/* 2. Banner */
.banner-section {
  position: relative;
  width: 100%;
  height: 420rpx; /* Matches Figma 420rpx */
  margin-bottom: 24rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2) 0%, transparent 30%, rgba(0,0,0,0.7) 100%);
  z-index: 1;
}

.banner-text {
  position: absolute;
  bottom: 64rpx;
  left: 48rpx;
  color: #ffffff;
  z-index: 2;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.banner-tag {
  font-size: 24rpx;
  letter-spacing: 4rpx;
  opacity: 0.95;
  margin-bottom: 16rpx;
  font-weight: 600;
  text-transform: uppercase;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.banner-title {
  font-size: 52rpx;
  font-weight: 800;
  line-height: 1.2;
  letter-spacing: 1rpx;
}

/* 3. Grid Nav */
.nav-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
  padding: 48rpx 32rpx;
  background: #ffffff;
  margin: 0 24rpx 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.06);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: transform 0.2s;
}

.nav-item:active {
  transform: scale(0.9);
}

.nav-icon-box {
  width: 112rpx;
  height: 112rpx;
  border-radius: 32rpx; /* rounded-2xl */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.nav-icon-box::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s;
}

.nav-item:active .nav-icon-box::before {
  opacity: 1;
}

.nav-icon-box image {
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.nav-text {
  font-size: 24rpx;
  color: #334155;
  font-weight: 500;
}

/* 4. Tabs */
.tab-scroll {
  white-space: nowrap;
  padding: 0 32rpx 32rpx;
  display: flex;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 40rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-right: 24rpx;
  background-color: #F1F5F9;
  color: #64748B;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  height: 72rpx; /* Fixed height for better centering */
  box-sizing: border-box;
  border: 2rpx solid transparent;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-item.active {
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.25);
  border-color: rgba(255, 255, 255, 0.1);
}

/* 5. Product Grid */
.product-grid {
  padding: 0 32rpx 48rpx;
  display: flex;
  gap: 24rpx;
}

.grid-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* Loading */
.loading-footer {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
}

.spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #667eea;
  border-right-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
