/** pages/index/index.wxss - 首页样式 **/

/* 使用全局设计系统，不重复定义颜色变量 */
/* 所有颜色已在 app.wxss 中定义 */

.container {
  min-height: 100vh;
  background-color: var(--luxury-ivory);
  padding-bottom: 40rpx;
}

/* ========== 1. Banner - 轮播图 ========== */
.banner-section {
  position: relative;
  width: 100%;
  height: 500rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-item {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
}

.banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ========== 2. Identity Card - 身份信息 (Single Row) ========== */
.identity-card {
  margin: -60rpx 30rpx 30rpx;
  background: var(--luxury-white);
  border-radius: var(--radius-xl);
  padding: var(--space-lg);
  position: relative;
  z-index: 10;
  box-shadow: var(--shadow-lg);
}

.identity-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.identity-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.identity-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.identity-level {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-light) 100%);
  color: var(--luxury-white);
  font-size: 20rpx;
  font-weight: 500;
  border-radius: var(--radius-full);
  white-space: nowrap;
}

.identity-right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  width: 32rpx;
  height: 32rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--luxury-gold);
  font-family: var(--font-mono);
}

/* ========== 2.5. Dashboard Card - 数据看板（新增）========== */
.dashboard-card {
  margin: -60rpx 30rpx 30rpx;
  background: var(--luxury-white);
  border-radius: var(--radius-xl);
  padding: var(--space-lg);
  box-shadow: var(--shadow-lg);
  overflow: hidden;
  position: relative;
  z-index: 10;
}

/* 1. 主KPI卡片 */
.kpi-primary-card {
  padding: var(--space-lg);
  background: linear-gradient(135deg, var(--luxury-gold-bg-light) 0%, var(--luxury-gold-bg) 100%);
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-lg);
}

.kpi-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-sm);
}

.kpi-title {
  font-size: var(--text-base);
  color: var(--text-secondary);
  font-weight: var(--font-medium);
}

.kpi-period {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.period-text {
  font-size: var(--text-xs);
  color: var(--text-tertiary);
}

.icon-xs {
  width: 20rpx;
  height: 20rpx;
}

.kpi-main {
  display: flex;
  align-items: baseline;
  gap: var(--space-sm);
  margin-bottom: var(--space-xs);
}

.kpi-value {
  font-size: var(--text-4xl);
  font-weight: var(--font-bold);
  color: var(--luxury-gold);
  font-family: var(--font-mono);
  letter-spacing: var(--tracking-tight);
  animation: countUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes countUp {
  0% { transform: translateY(20rpx); opacity: 0; }
  100% { transform: translateY(0); opacity: 1; }
}

.kpi-badge {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-full);
}

.kpi-badge.up { background: var(--color-success-light); }
.kpi-badge.down { background: var(--color-error-light); }
.kpi-badge.flat { background: var(--luxury-warm-gray); }

.trend-icon { width: 20rpx; height: 20rpx; }

.trend-text {
  font-size: var(--text-xs);
  font-weight: var(--font-semibold);
  font-family: var(--font-mono);
}

.kpi-badge.up .trend-text { color: var(--color-success); }
.kpi-badge.down .trend-text { color: var(--color-error); }
.kpi-subtitle { font-size: var(--text-xs); color: var(--text-muted); }

/* 2. 次要KPI三栏 */
.kpi-secondary-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: var(--space-lg) 0;
  border-top: 1rpx solid var(--luxury-warm-gray);
  border-bottom: 1rpx solid var(--luxury-warm-gray);
  margin-bottom: var(--space-lg);
}

.kpi-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-xs);
  flex: 1;
}

.kpi-item-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.kpi-item-icon image { width: 24rpx; height: 24rpx; }
.kpi-item-icon.todayRevenue { background: var(--luxury-gold-bg); }
.kpi-item-icon.teamSize { background: var(--data-blue-bg); }
.kpi-item-icon.orders { background: var(--data-green-bg); }

.kpi-item-value {
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--text-primary);
  font-family: var(--font-mono);
}

.kpi-item-label { font-size: var(--text-xs); color: var(--text-secondary); }
.kpi-divider { width: 1rpx; height: 60rpx; background: var(--luxury-warm-gray); }

/* 3. 收益趋势图 */
.revenue-trend-section { margin-bottom: var(--space-lg); }

.trend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.trend-title {
  font-size: var(--text-base);
  color: var(--text-primary);
  font-weight: var(--font-semibold);
}

.trend-subtitle { font-size: var(--text-xs); color: var(--text-muted); }

.trend-chart {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  height: 120rpx;
  gap: var(--space-xs);
  padding: var(--space-md);
  background: var(--luxury-ivory);
  border-radius: var(--radius-md);
}

.bar-container { flex: 1; height: 100%; display: flex; align-items: flex-end; }

.bar {
  width: 100%;
  min-height: 8rpx;
  border-radius: var(--radius-sm) var(--radius-sm) 0 0;
  background: var(--luxury-warm-gray);
  overflow: hidden;
}

.bar-fill {
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, var(--luxury-gold-light) 0%, var(--luxury-gold) 100%);
  animation: fillUp 0.8s ease-out;
}

@keyframes fillUp {
  0% { transform: translateY(100%); }
  100% { transform: translateY(0); }
}

/* 4. 快捷操作 */
.quick-actions { display: flex; gap: var(--space-sm); }

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xs);
  border-radius: var(--radius-lg);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  transition: all var(--duration-fast);
}

.action-btn.primary {
  background: var(--luxury-gold);
  color: var(--luxury-white);
  box-shadow: var(--shadow-gold);
}

.action-btn.secondary {
  background: var(--luxury-ivory);
  color: var(--text-primary);
  border: 1rpx solid var(--luxury-border);
}

.action-btn:active { transform: scale(0.98); opacity: 0.9; }
.action-icon { width: 24rpx; height: 24rpx; }

/* ========== 3. Main Entrances - 主要入口 ========== */
.main-entrances {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.entrance-card {
  flex: 1;
  height: 180rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.entrance-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
  z-index: 1;
}

.entrance-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
}

.entrance-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.entrance-subtitle {
  font-size: 24rpx;
  color: #999999;
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  font-weight: 500;
}

/* ========== 4. Secondary Entrances - 次要入口 ========== */
.secondary-grid {
  margin: 0 30rpx 30rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.secondary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  width: 25%;
}

.secondary-icon-box {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.secondary-icon-box.mirror { background: linear-gradient(135deg, #E0F2FE 0%, #BAE6FD 100%); }
.secondary-icon-box.sales { background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%); }
.secondary-icon-box.talk { background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%); }
.secondary-icon-box.planet { background: linear-gradient(135deg, #F3E8FF 0%, #E9D5FF 100%); }

.secondary-icon {
  width: 44rpx;
  height: 44rpx;
}

.secondary-text {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
  text-align: center;
}

/* ========== 5 & 6. Banner Card Sections ========== */
.banner-card-section {
  margin: 0 30rpx 30rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx 30rpx 0; /* Padding bottom handled by body height or internal padding */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.banner-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.banner-card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.banner-card-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.icon-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}

.banner-card-body {
  height: 160rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx; /* Add bottom margin inside the white card */
}

.banner-card-body.red-theme {
  background: linear-gradient(135deg, #D32F2F 0%, #B71C1C 100%);
}

.banner-card-body.dark-theme {
  background: linear-gradient(135deg, #2D3748 0%, #1A202C 100%);
}

.banner-card-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
}

.card-big-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.card-sub-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
