/** pages/category/category.wxss **/

/* 1. Sticky Search Header */
.search-sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #ffffff;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.search-box {
  background-color: #F8FAFC; /* Slate 50 */
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  color: var(--color-text-sub);
}

.search-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.search-text {
  font-size: 28rpx;
}

/* 2. Scenario Nav (Horizontal) */
.scenario-section {
  background: #ffffff;
  padding: 24rpx 0 32rpx;
  border-bottom: 2rpx solid var(--color-bg-subtle);
}

.scenario-scroll {
  white-space: nowrap;
  padding-left: 32rpx;
  display: flex;
  align-items: flex-start;
}

.scenario-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  position: relative;
  transition: all 0.2s;
}

.scenario-img-box {
  width: 144rpx; /* Figma: 72px * 2 */
  height: 144rpx;
  border-radius: 32rpx; /* rounded-2xl */
  overflow: hidden;
  background: #F1F5F9;
  border: 4rpx solid transparent; /* Default border */
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scenario-item.active .scenario-img-box {
  border-color: var(--color-primary); /* Active Border */
  background: #ffffff;
}

.scenario-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.scenario-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-text-sub);
  text-align: center;
}

.scenario-item.active .scenario-text {
  color: var(--color-primary);
  font-weight: 700;
}

/* 3. Filter Sticky Bar */
.filter-sticky-bar {
  position: sticky;
  top: 110rpx; /* Below search header */
  z-index: 90;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(10px);
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid var(--color-border);
}

.filter-row {
  display: flex;
  gap: 40rpx;
}

.filter-item {
  font-size: 28rpx;
  color: var(--color-text-sub);
  font-weight: 600;
  position: relative;
  display: flex;
  align-items: center;
}

.filter-item.active {
  color: var(--color-text-main); /* Black */
}

.active-indicator {
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: var(--color-primary);
  border-radius: 2rpx;
}

.sort-arrows {
  display: flex;
  flex-direction: column;
  margin-left: 4rpx;
  line-height: 0.8;
}

.arrow {
  font-size: 16rpx;
  color: #CBD5E1;
}

.arrow.on {
  color: var(--color-text-main);
}

/* 4. Product List (Single Column) */
.product-list-scroll {
  height: calc(100vh - 250rpx); /* approximate remaining height */
  background-color: var(--color-bg-subtle);
}

.product-list {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
/* Loading & Empty states are reused */
.loading-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  color: var(--color-text-muted);
  font-size: 24rpx;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--color-bg-subtle);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: var(--color-text-muted);
}
