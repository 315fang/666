/* pages/category/category.wxss - 分类页样式 */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--color-white);
}

/* ==================== 搜索栏 ==================== */
.search-header {
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--color-white);
}

.search-box {
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 var(--spacing-lg);
  background: var(--color-background);
  border-radius: var(--radius-full);
}

.search-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-sm);
  opacity: 0.5;
}

.search-text {
  color: var(--color-placeholder);
  font-size: var(--font-size-md);
}

/* ==================== 主内容 ==================== */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* ==================== 左侧分类 ==================== */
.category-sidebar {
  width: 180rpx;
  background: var(--color-background);
  flex-shrink: 0;
}

.category-nav-item {
  padding: var(--spacing-lg) var(--spacing-md);
  text-align: center;
  font-size: var(--font-size-md);
  color: var(--color-secondary);
  position: relative;
  transition: all 0.2s;
}

.category-nav-item.active {
  background: var(--color-white);
  color: var(--color-navy);
  font-weight: 500;
}

.category-nav-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 40rpx;
  background: var(--color-navy);
  border-radius: 0 3rpx 3rpx 0;
}

/* ==================== 右侧商品 ==================== */
.product-area {
  flex: 1;
  padding: var(--spacing-md);
  background: var(--color-white);
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: var(--color-background);
  border-radius: var(--radius-md);
  padding: 4rpx;
  margin-bottom: var(--spacing-md);
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  font-size: var(--font-size-sm);
  color: var(--color-secondary);
  border-radius: var(--radius-sm);
  transition: all 0.2s;
}

.filter-item.active {
  color: var(--color-navy);
  font-weight: 500;
  background: var(--color-white);
}

.sort-arrow {
  margin-left: 4rpx;
  font-size: var(--font-size-xs);
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.product-item {
  display: flex;
  background: var(--color-white);
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.product-item:last-child {
  border-bottom: none;
}

.product-image-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  background: var(--color-background);
  flex-shrink: 0;
  position: relative;
}

.product-image {
  width: 100%;
  height: 100%;
}

.hot-tag {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background: var(--color-error);
  color: var(--color-white);
  font-size: var(--font-size-xs);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-info {
  flex: 1;
  margin-left: var(--spacing-md);
  display: flex;
  flex-direction: column;
  position: relative;
}

.product-name {
  font-size: var(--font-size-md);
  color: var(--color-text);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-price-row {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-top: auto;
}

.product-price {
  font-size: var(--font-size-lg);
  font-weight: 500;
  color: var(--color-title);
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

.product-price::before {
  content: '¥';
  font-size: var(--font-size-sm);
}

.product-sales {
  font-size: var(--font-size-xs);
  color: var(--color-placeholder);
}

/* 快速加购 */
.quick-add {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 52rpx;
  height: 52rpx;
  background: var(--color-navy);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-white);
  font-size: 32rpx;
}

.quick-add:active {
  transform: scale(0.9);
}

/* ==================== 加载更多 ==================== */
.load-more {
  text-align: center;
  padding: var(--spacing-lg) 0;
  font-size: var(--font-size-sm);
  color: var(--color-placeholder);
}

/* ==================== 空状态 ==================== */
.empty {
  padding: 100rpx 0;
}

/* ==================== 加载状态 ==================== */
.loading {
  padding: 60rpx 0;
}
