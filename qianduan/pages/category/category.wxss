}

/* 价格排序箭头 */
.sort-arrows {
  display: flex;
  flex-direction: column;
  margin-left: 8rpx;
  line-height: 0.8;
}

.arrow {
  font-size: 16rpx;
  color: #CBD5E1;
}

.arrow.on {
  color: var(--color-primary);
}

/* 设置按钮 */
.filter-icon-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 4. Product List (Single Column) */
.product-list-scroll {
  height: calc(100vh - 250rpx); /* approximate remaining height */
  background-color: var(--color-bg-subtle);
}

.product-list {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
/* Loading & Empty states are reused */
.loading-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  color: var(--color-text-muted);
  font-size: 24rpx;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--color-bg-subtle);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: var(--color-text-muted);
}
