/** pages/category/category.wxss **/

/* 1. Sticky Search Header */
.search-sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #ffffff;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.search-box {
  background-color: #F8FAFC; /* Slate 50 */
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  color: var(--color-text-sub);
}

.search-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.search-text {
  font-size: 28rpx;
}

/* 2. Category Tabs - 方形滑动标签栏 */
.category-tab-container {
  margin: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.category-tab-wrapper {
  width: 100%;
}

.category-tab-scroll {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8rpx 0;
  height: 88rpx;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  height: 72rpx;
  margin: 0 4rpx;
  position: relative;
  flex-shrink: 0;
}

.category-tab-item:first-child {
  margin-left: 16rpx;
}

.category-tab-item:last-child {
  margin-right: 16rpx;
}

.category-tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text-sub);
  transition: all 0.25s ease;
}

/* 底部滑动指示条 */
.category-tab-item::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 6rpx;
  background: var(--color-primary);
  border-radius: 3rpx;
  transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  opacity: 0;
}

/* 选中状态 */
.category-tab-item.active .category-tab-text {
  color: var(--color-primary);
  font-weight: 600;
  transform: scale(1.05);
}

.category-tab-item.active::after {
  width: 40rpx;
  opacity: 1;
}

/* 悬停效果 */
.category-tab-item:active .category-tab-text {
  opacity: 0.7;
}

/* 3. Filter Bar - 方形滑动标签栏 */
.filter-tab-container {
  margin: 0 24rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  display: flex;
  align-items: center;
  padding-right: 16rpx;
}

.filter-tab-wrapper {
  flex: 1;
}

.filter-tab-scroll {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8rpx 0;
  height: 88rpx;
}

.filter-tab-item {
