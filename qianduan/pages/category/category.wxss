/** pages/category/category.wxss **/

/* 1. Sticky Search Header */
.search-sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #ffffff;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.search-box {
  background-color: #F8FAFC; /* Slate 50 */
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  color: var(--color-text-sub);
}

.search-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.search-text {
  font-size: 28rpx;
}

/* 2. Scenario Nav (Horizontal) */
.scenario-section {
  background: #ffffff;
  padding: 24rpx 0 32rpx;
  border-bottom: 2rpx solid var(--color-bg-subtle);
}

.scenario-scroll {
  white-space: nowrap;
  padding-left: 32rpx;
  display: flex;
  align-items: flex-start;
}

.scenario-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  position: relative;
  transition: all 0.2s;
}

.scenario-img-box {
  width: 144rpx; /* Figma: 72px * 2 */
  height: 144rpx;
  border-radius: 32rpx; /* rounded-2xl */
  overflow: hidden;
  background: #F1F5F9;
  border: 4rpx solid transparent; /* Default border */
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scenario-item.active .scenario-img-box {
  border-color: var(--color-primary); /* Active Border */
  background: #ffffff;
}

.scenario-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.scenario-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-text-sub);
  text-align: center;
}

.scenario-item.active .scenario-text {
  color: var(--color-primary);
  font-weight: 700;
}

/* 3. Filter Sticky Bar */
.filter-sticky-bar {
  position: sticky;
  top: 110rpx; /* Below search header */
  z-index: 90;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(10px);
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid var(--color-border);
}

.filter-row {
  display: flex;
  gap: 40rpx;
}

.filter-item {
  font-size: 28rpx;
  color: var(--color-text-sub);
  font-weight: 600;
  position: relative;
  display: flex;
  align-items: center;
}

.filter-item.active {
  color: var(--color-text-main); /* Black */
}

.active-indicator {
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: var(--color-primary);
  border-radius: 2rpx;
}

.sort-arrows {
  display: flex;
  flex-direction: column;
  margin-left: 4rpx;
  line-height: 0.8;
}

.arrow {
  font-size: 16rpx;
  color: #CBD5E1;
}

.arrow.on {
  color: var(--color-text-main);
}

/* 4. Product List (Single Column) */
.product-list-scroll {
  height: calc(100vh - 250rpx); /* approximate remaining height */
  background-color: var(--color-bg-subtle);
}

.product-list {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.product-item {
  display: flex;
  background: #ffffff;
  padding: 20rpx;
  border-radius: 32rpx; /* rounded-2xl */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  transition: transform 0.2s;
  position: relative; /* Enable absolute positioning for children */
}

.product-item:active {
  transform: scale(0.98);
}

.item-img-box {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx; /* rounded-xl */
  background: #F8FAFC;
  overflow: hidden;
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.item-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-tag {
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(239, 68, 68, 0.9); /* Red-500 */
  color: #fff;
  font-size: 20rpx;
  font-weight: 800;
  padding: 4rpx 10rpx;
  border-bottom-right-radius: 12rpx;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
  /* Ensure text doesn't overlap with the absolute button */
  padding-right: 70rpx; 
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--color-text-main);
  line-height: 1.3;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: var(--color-text-sub);
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* Height adjustment to ensure alignment */
  min-height: 64rpx; 
}

.item-price {
  color: var(--color-primary);
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 24rpx;
  font-weight: 700;
  margin-right: 4rpx;
}

.amount {
  font-size: 36rpx; /* Large price */
  font-weight: 800;
  font-family: 'DIN Condensed', sans-serif;
}

/* Black Circle Add Button - Absolute Position */
.add-btn-circle {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: var(--color-text-main); /* Black */
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  transition: background 0.2s, transform 0.2s;
  z-index: 5;
}

.add-btn-circle:active {
  background: var(--color-primary); /* Turn blue on active */
  transform: scale(0.9);
}

.plus-icon {
  font-size: 40rpx;
  font-weight: 300;
  line-height: 1;
  margin-top: -4rpx; /* visual center adjustment */
}

/* Loading */
.loading-footer {
  text-align: center;
  padding: 32rpx;
  color: var(--color-text-sub);
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.spinner {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid #E2E8F0;
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
