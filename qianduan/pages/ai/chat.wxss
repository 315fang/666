/** pages/ai/chat.wxss */
page {
  background-color: #F5F7FA;
  height: 100vh;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.chat-list {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
}

.welcome-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
  opacity: 0.8;
}

.tip-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.tip-sub {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.message-item {
  display: flex;
  margin-bottom: 32rpx;
  align-items: flex-start;
}

.message-item.user {
  flex-direction: row-reverse;
}

.avatar-box {
  flex-shrink: 0;
  margin: 0 16rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.avatar.ai {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.content {
  max-width: 65%;
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  position: relative;
  word-wrap: break-word;
}

.message-item.ai .content {
  background-color: #fff;
  color: #333;
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.message-item.user .content {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-top-right-radius: 4rpx;
  box-shadow: 0 4rpx 12rpx rgba(118, 75, 162, 0.3);
}

/* Loading Dots */
.loading-item {
  display: flex;
  margin-bottom: 32rpx;
  align-items: flex-start;
}

.loading-dots {
  background-color: #fff;
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  border-top-left-radius: 4rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #ccc;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* Input Area */
.input-area {
  background-color: #fff;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
}

.input {
  flex: 1;
  height: 80rpx;
  background-color: #F5F7FA;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  transition: opacity 0.2s;
}

.send-btn.disabled {
  background: #E0E0E0;
  color: #999;
  pointer-events: none;
}
