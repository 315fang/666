.agreement-container {
  padding: 40rpx;
  background: #fff;
  min-height: 100vh;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}
.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}
.section {
  margin-bottom: 40rpx;
}
.sec-title {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.danger {
  color: #d90429;
  background: #fff0f3;
  padding: 24rpx;
  border-radius: 12rpx;
}
.bold-text {
  font-weight: 600;
}
.footer-tips {
  font-size: 24rpx;
  color: #ccc;
  text-align: center;
  margin-top: 80rpx;
}
