/* pages/order/detail.wxss */
.container {
  padding: 20rpx 24rpx;
  padding-bottom: 140rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.status-text {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.status-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255,255,255,0.7);
  margin-top: 8rpx;
}

.status-pending { background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%); }
.status-paid { background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%); }
.status-shipped { background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%); }
.status-completed { background: linear-gradient(135deg, #10B981 0%, #059669 100%); }
.status-agent_confirmed { background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%); }
.status-shipping_requested { background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%); }

/* 卡片 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #0F172A;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F1F5F9;
}

/* 商品行 */
.product-row {
  display: flex;
  gap: 20rpx;
}

.product-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.product-img-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
  font-size: 22rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #334155;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #EF4444;
}

.product-qty {
  font-size: 24rpx;
  color: #94A3B8;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #94A3B8;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #334155;
  text-align: right;
}

.info-value-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.copy-btn {
  font-size: 22rpx;
  color: #3B82F6;
  background: #EFF6FF;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid #DBEAFE;
}

.info-value.price {
  color: #EF4444;
  font-weight: 600;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.btn-primary {
  background: #0F172A;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-outline {
  background: #fff;
  color: #64748B;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: 2rpx solid #E2E8F0;
}

/* 加载 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #94A3B8;
  font-size: 28rpx;
}

/* 订单进度条 */
.progress-card {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
}

.progress-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.step-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #E2E8F0;
  border: 4rpx solid #E2E8F0;
}

.progress-step.active .step-dot {
  background: #2563EB;
  border-color: #2563EB;
  box-shadow: 0 0 0 6rpx rgba(37, 99, 235, 0.2);
}

.progress-step.done .step-dot {
  background: #10B981;
  border-color: #10B981;
}

.step-label {
  font-size: 22rpx;
  color: #94A3B8;
}

.progress-step.active .step-label {
  color: #2563EB;
  font-weight: 500;
}

.progress-step.done .step-label {
  color: #10B981;
}

.progress-line {
  flex: 1;
  height: 4rpx;
  background: #E2E8F0;
  margin: 0 12rpx;
  margin-bottom: 30rpx;
}

.progress-line.done {
  background: #10B981;
}

/* 佣金结算卡片 */
.settlement-card {
  background: #FFFBEB !important;
  border: 1rpx solid #FDE68A;
}

.settlement-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.settlement-icon {
  font-size: 36rpx;
}

.settlement-text {
  font-size: 26rpx;
  color: #92400E;
}
