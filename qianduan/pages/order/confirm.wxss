.container {
    min-height: 100vh;
    background: var(--color-background, #F8FAFC);
    padding-bottom: 140rpx;
}

/* 通用区块 */
.section {
    background: #fff;
    margin: 20rpx 24rpx;
    border-radius: 16rpx;
    padding: 28rpx 24rpx;
}

/* 收货地址 */
.address-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.address-info {
    flex: 1;
}

.address-top {
    display: flex;
    align-items: center;
    gap: 16rpx;
    margin-bottom: 8rpx;
}

.address-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #0F172A;
}

.address-phone {
    font-size: 28rpx;
    color: #64748B;
}

.address-tag {
    font-size: 20rpx;
    color: #2563EB;
    border: 1rpx solid #2563EB;
    border-radius: 6rpx;
    padding: 2rpx 10rpx;
}

.address-detail {
    font-size: 26rpx;
    color: #334155;
    line-height: 1.5;
}

.arrow {
    font-size: 36rpx;
    color: #94A3B8;
    margin-left: 16rpx;
}

/* 无地址 */
.address-empty {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.empty-icon {
    font-size: 40rpx;
}

.empty-text {
    flex: 1;
    font-size: 28rpx;
    color: #64748B;
}

/* 商品列表 */
.goods-item {
    display: flex;
    gap: 20rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #F1F5F9;
}

.goods-item:last-child {
    border-bottom: none;
}

.goods-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    background: #F1F5F9;
    flex-shrink: 0;
}

.goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.goods-name {
    font-size: 28rpx;
    color: #0F172A;
    font-weight: 500;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.goods-spec {
    font-size: 24rpx;
    color: #94A3B8;
    margin-top: 8rpx;
}

.goods-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 8rpx;
}

.goods-price {
    font-size: 30rpx;
    color: #0F172A;
    font-weight: 600;
}

.goods-quantity {
    font-size: 26rpx;
    color: #94A3B8;
}

/* 备注 */
.remark-section {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.remark-label {
    font-size: 28rpx;
    color: #334155;
    flex-shrink: 0;
}

.remark-input {
    flex: 1;
    font-size: 26rpx;
    text-align: right;
    color: #334155;
}

/* 底部栏 */
.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 24rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.05);
    z-index: 100;
}

.total-info {
    display: flex;
    align-items: baseline;
}

.total-label {
    font-size: 26rpx;
    color: #64748B;
}

.total-price {
    font-size: 36rpx;
    font-weight: 700;
    color: #0F172A;
    margin-left: 8rpx;
}

.submit-btn {
    background: linear-gradient(135deg, #2563EB 0%, #3B82F6 100%);
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
    padding: 20rpx 56rpx;
    border-radius: 48rpx;
}

.submit-btn.disabled {
    opacity: 0.5;
}

/* 成功弹窗 */
.success-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.success-popup.show {
  visibility: visible;
  opacity: 1;
}

.success-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

.success-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 600rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.27, 1.55);
}

.success-popup.show .success-content {
  transform: translate(-50%, -50%) scale(1);
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background: #DCFCE7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin-bottom: 30rpx;
}

.success-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #0F172A;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #64748B;
  margin-bottom: 60rpx;
  text-align: center;
}

.success-btns {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-primary, .btn-outline {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-primary {
  background: #0F172A;
  color: #fff;
}

.btn-outline {
  background: #fff;
  border: 2rpx solid #E2E8F0;
  color: #475569;
}
