/* pages/order/list.wxss - 订单列表样式 */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F5F7FA;
}

/* ==================== Tab栏 - 蓝色滑动条 ==================== */
.tabs-wrapper {
  background: #fff;
  border-bottom: 1rpx solid #E8ECF0;
  padding: 8rpx 0;
}

.tabs-scroll {
  white-space: nowrap;
  display: flex;
  align-items: center;
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #8B95A5;
  position: relative;
  transition: all 0.25s ease;
  flex-shrink: 0;
}

.tab-item:first-child {
  margin-left: 16rpx;
}

.tab-item:last-child {
  margin-right: 16rpx;
}

/* 底部蓝色滑动指示条 */
.tab-item::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 6rpx;
  background: linear-gradient(135deg, #2563EB 0%, #3B82F6 100%);
  border-radius: 3rpx;
  transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  opacity: 0;
}

/* 选中状态 */
.tab-item.active {
  color: #2563EB;
  font-weight: 600;
}

.tab-item.active::after {
  width: 36rpx;
  opacity: 1;
}

/* 点击效果 */
.tab-item:active {
  opacity: 0.7;
}

/* ==================== 订单列表 ==================== */
.order-list {
  flex: 1;
  padding: 24rpx;
}

.order-list-container {
  padding-bottom: 40rpx;
}

/* 订单卡片 - 全新设计 */
.order-card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.order-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 */
.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 28rpx 20rpx;
  background: linear-gradient(to right, #FAFBFC 0%, #fff 100%);
}

.order-no {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 状态颜色 */
.order-status.pending { 
  color: #F59E0B; 
  background: rgba(245, 158, 11, 0.1);
}
.order-status.paid { 
  color: #2563EB; 
  background: rgba(37, 99, 235, 0.1);
}
.order-status.shipped { 
  color: #7C3AED; 
  background: rgba(124, 58, 237, 0.1);
}
.order-status.completed { 
  color: #10B981; 
  background: rgba(16, 185, 129, 0.1);
}
.order-status.cancelled { 
  color: #9CA3AF; 
  background: rgba(156, 163, 175, 0.1);
}
.order-status.refunding,
.order-status.refund_pending,
.order-status.refund_approved,
.order-status.refund_processing { 
  color: #EF4444; 
  background: rgba(239, 68, 68, 0.1);
}

/* 商品列表 */
.order-products {
  padding: 0 28rpx;
}

.order-product {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.order-product:last-child {
  border-bottom: none;
}

/* 商品图片 */
.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #F3F4F6 0%, #E5E7EB 100%);
  flex-shrink: 0;
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.product-image-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #F3F4F6 0%, #E5E7EB 100%);
}

.product-image-placeholder text {
  font-size: 22rpx;
  color: #9CA3AF;
}

.product-info {
  flex: 1;
  margin-left: 24rpx;
  min-height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 600;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  display: block;
}

.product-price-qty {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.product-price {
  font-size: 32rpx;
  color: #EF4444;
  font-weight: 700;
  font-family: 'DIN Condensed', -apple-system, sans-serif;
}

.product-price::before {
  content: '¥';
  font-size: 22rpx;
  margin-right: 2rpx;
}

.product-qty {
  font-size: 24rpx;
  color: #6B7280;
  background: #F3F4F6;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 订单底部 */
.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  background: #FAFBFC;
  border-top: 1rpx solid #F3F4F6;
}

.order-total {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #6B7280;
}

.total-label {
  margin-right: 8rpx;
}

.total-amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
  font-family: 'DIN Condensed', -apple-system, sans-serif;
}

.total-amount::before {
  content: '¥';
  font-size: 24rpx;
}

.total-count {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-left: 12rpx;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  gap: 16rpx;
}

.btn {
  padding: 14rpx 28rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.btn-sm {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #2563EB 0%, #3B82F6 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.btn-primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.2);
}

.btn-secondary {
  background: linear-gradient(135deg, #7C3AED 0%, #8B5CF6 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(124, 58, 237, 0.3);
}

.btn-secondary:active {
  transform: scale(0.95);
}

.btn-ghost {
  background: #fff;
  color: #4B5563;
  border: 2rpx solid #E5E7EB;
}

.btn-ghost:active {
  background: #F3F4F6;
  transform: scale(0.95);
}

/* ==================== 加载更多 ==================== */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #9CA3AF;
}

/* ==================== 空状态 ==================== */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  padding-bottom: 100rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7280;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.empty .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #2563EB 0%, #3B82F6 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

/* ==================== 加载状态 ==================== */
.loading {
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #9CA3AF;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #E5E7EB;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 发货方式标签 */
.fulfillment-tag {
  font-size: 20rpx;
  background: linear-gradient(135deg, #EEF2FF 0%, #E0E7FF 100%);
  color: #4F46E5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  margin-left: 12rpx;
}

/* ==================== 骨架屏 ==================== */
.skeleton-wrapper {
  padding: 24rpx;
}

.skeleton-card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.skeleton-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.skeleton-body {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.skeleton-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e8e8e8 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-info {
  flex: 1;
  margin-left: 24rpx;
}

.skeleton-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F3F4F6;
}

.skeleton-btn {
  width: 140rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e8e8e8 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-line {
  height: 32rpx;
  border-radius: 8rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e8e8e8 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  margin-bottom: 16rpx;
}

.skeleton-line:last-child {
  margin-bottom: 0;
}

.skeleton-line.short {
  width: 60%;
}

.skeleton-line.tiny {
  width: 100rpx;
  height: 28rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ==================== 订单卡片入场动画 ==================== */
.card-fade-in {
  animation: cardFadeIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  opacity: 0;
}

@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Tab切换时的激活动画 */
.tab-item:active {
  transform: scale(0.95);
  opacity: 0.7;
}
