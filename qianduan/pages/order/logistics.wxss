/* 物流轨迹页面样式 */
.logistics-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 30%);
  padding-bottom: 120rpx;
}

/* 顶部物流公司卡片 */
.logistics-header {
  background: #fff;
  margin: 24rpx 24rpx 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(59, 130, 246, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.company-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.company-logo {
  width: 88rpx;
  height: 88rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-icon {
  font-size: 48rpx;
}

.company-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.company-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.tracking-no {
  font-size: 24rpx;
  color: #6b7280;
}

.copy-btn {
  padding: 16rpx 32rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #3b82f6;
  border: none;
  line-height: 1.2;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #667eea, #764ba2);
  margin: 0 24rpx 32rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.status-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 时间线区域 */
.timeline-section {
  background: #fff;
  margin: 0 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 32rpx;
  padding-left: 8rpx;
  border-left: 6rpx solid #3b82f6;
}

.timeline {
  position: relative;
  padding-left: 48rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 48rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -36rpx;
  top: 32rpx;
  bottom: -16rpx;
  width: 2rpx;
  background: #e5e7eb;
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-dot {
  position: absolute;
  left: -48rpx;
  top: 0;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.timeline-item.active .timeline-dot {
  background: #3b82f6;
  box-shadow: 0 0 0 6rpx rgba(59, 130, 246, 0.2);
}

.dot-inner {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #fff;
}

.timeline-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.timeline-text {
  font-size: 28rpx;
  color: #1f2937;
  line-height: 1.6;
}

.timeline-item.active .timeline-text {
  color: #3b82f6;
  font-weight: 500;
}

.timeline-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.timeline-location {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #e5e7eb;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* 底部操作区 */
.actions-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f3f4f6;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.04);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

.action-btn.secondary {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-icon {
  font-size: 32rpx;
}
