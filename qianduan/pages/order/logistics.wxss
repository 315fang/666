/* pages/order/logistics.wxss */
.logistics-container {
    min-height: 100vh;
    background-color: #F8FAFC;
    padding-bottom: 40rpx;
}

/* Loading */
.loading-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 200rpx 0;
}

.loading-icon {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #E2E8F0;
    border-top-color: #0F172A;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #64748B;
}

/* 内容区域 */
.content {
    padding: 24rpx;
}

/* 状态卡片 */
.status-card {
    background: #fff;
    border-radius: 16rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.status-header {
    display: flex;
    align-items: flex-start;
    margin-bottom: 32rpx;
}

.status-icon {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.status-icon.shipping {
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
}

.status-icon.delivered {
    background: linear-gradient(135deg, #10B981 0%, #059669 100%);
}

.status-icon.problem {
    background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
}

.status-info {
    flex: 1;
}

.status-title {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #0F172A;
    margin-bottom: 12rpx;
}

.status-desc {
    display: block;
    font-size: 28rpx;
    color: #64748B;
    line-height: 1.6;
}

/* 商品信息 */
.product-info {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-top: 1rpx solid #E2E8F0;
    border-bottom: 1rpx solid #E2E8F0;
    margin-bottom: 24rpx;
}

.product-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 12rpx;
    background: #F1F5F9;
    margin-right: 20rpx;
}

.product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.product-name {
    font-size: 28rpx;
    color: #0F172A;
    margin-bottom: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.product-quantity {
    font-size: 24rpx;
    color: #94A3B8;
}

/* 物流单号 */
.tracking-info {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.tracking-row {
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.tracking-label {
    color: #64748B;
    margin-right: 12rpx;
}

.tracking-value {
    flex: 1;
    color: #0F172A;
    font-family: monospace;
}

.copy-btn {
    color: #3B82F6;
    font-size: 26rpx;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
    background: #EFF6FF;
}

/* 物流轨迹 */
.tracking-timeline {
    background: #fff;
    border-radius: 16rpx;
    padding: 32rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.timeline-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #0F172A;
    margin-bottom: 32rpx;
}

.timeline-list {
    position: relative;
}

.timeline-item {
    display: flex;
    padding-bottom: 40rpx;
    position: relative;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 14rpx;
    top: 32rpx;
    bottom: 0;
    width: 2rpx;
    background: #E2E8F0;
}

.timeline-item:last-child::before {
    display: none;
}

.timeline-dot {
    width: 28rpx;
    height: 28rpx;
    border-radius: 50%;
    background: #E2E8F0;
    border: 4rpx solid #fff;
    margin-right: 20rpx;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
}

.timeline-item.active .timeline-dot {
    background: #3B82F6;
    box-shadow: 0 0 0 8rpx rgba(59, 130, 246, 0.1);
}

.timeline-content {
    flex: 1;
    padding-top: 2rpx;
}

.timeline-status {
    font-size: 28rpx;
    color: #0F172A;
    line-height: 1.6;
    margin-bottom: 8rpx;
}

.timeline-item.active .timeline-status {
    font-weight: 600;
    color: #3B82F6;
}

.timeline-time {
    font-size: 24rpx;
    color: #94A3B8;
}

/* 空状态 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 40rpx;
    background: #fff;
    border-radius: 16rpx;
}

.empty-icon {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
}

.empty-text {
    font-size: 28rpx;
    color: #64748B;
    text-align: center;
    line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
    margin-top: 24rpx;
    display: flex;
    gap: 16rpx;
}

.action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    height: 88rpx;
    background: #fff;
    border: 2rpx solid #E2E8F0;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #0F172A;
}

.btn-icon {
    font-size: 32rpx;
}

.btn-text {
    font-weight: 500;
}
