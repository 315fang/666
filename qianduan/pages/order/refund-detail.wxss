/* pages/order/refund-detail.wxss */
.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 24rpx;
}

.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx 30rpx 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(15,23,42,0.04);
}

.status-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.status-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #0F172A;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 24rpx;
  color: #64748B;
  text-align: center;
}

.status-card.status-pending { border-top: 6rpx solid #F97316; }
.status-card.status-approved { border-top: 6rpx solid #4F46E5; }
.status-card.status-rejected { border-top: 6rpx solid #EF4444; }
.status-card.status-completed { border-top: 6rpx solid #10B981; }

.amount-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #64748B;
}

.amount-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #EF4444;
  font-family: 'DIN Pro', sans-serif;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0F172A;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F1F5F9;
}

.product-row {
  display: flex;
  align-items: center;
}

.product-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #F1F5F9;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #0F172A;
  display: block;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 24rpx;
  color: #64748B;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #94A3B8;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.info-value {
  font-size: 26rpx;
  color: #334155;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #94A3B8;
}
