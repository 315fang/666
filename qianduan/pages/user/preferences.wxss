/* pages/user/preferences.wxss */

/* 整体容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #ffffff 40%);
  padding-bottom: 140rpx;
}

/* 顶部标题区 */
.header {
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: pulse 6s ease-in-out infinite;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.6;
  position: relative;
  z-index: 1;
}

/* 问题列表 */
.question-list {
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 问题卡片 */
.question-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.question-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.1);
}

.q-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 28rpx;
  position: relative;
  padding-left: 24rpx;
}

.q-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

/* 选项网格 */
.option-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.option-item {
  position: relative;
  padding: 28rpx 24rpx;
  background: #f8fafc;
  border: 3rpx solid #e2e8f0;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #64748b;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.option-item text {
  display: block;
  line-height: 1.5;
}

/* 选中状态 */
.option-item.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-color: #667eea;
  color: #ffffff;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

/* 点击动画 */
.option-item:active {
  transform: scale(0.98);
}

/* 底部按钮区 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%);
  backdrop-filter: blur(10rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.reset-btn {
  flex: 0 0 140rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.reset-btn:active {
  background: #f8fafc;
  border-color: #cbd5e1;
}

.save-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.save-btn[loading] {
  opacity: 0.7;
}

/* 加载状态 */
.save-btn::after {
  border-color: #ffffff transparent transparent transparent;
}

/* 动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.05);
  }
}

/* 响应式调整 */
@media (min-width: 768rpx) {
  .option-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}