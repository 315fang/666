.notif-list {
  padding: 24rpx;
}

.notif-item {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.04);
  position: relative;
  transition: all 0.2s;
}

.notif-item.unread::before {
  content: '';
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background: #EF4444;
  border-radius: 50%;
}

.notif-icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #F8FAFC;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 不同类型通知的背景色 */
.notif-icon-box.upgrade-bg {
  background: linear-gradient(135deg, #F0F9FF 0%, #E0F2FE 100%);
}

.notif-icon-box.commission-bg {
  background: linear-gradient(135deg, #F0FDF4 0%, #DCFCE7 100%);
}

.notif-icon-box.stock-bg {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
}

.notif-icon-box.system-bg {
  background: linear-gradient(135deg, #F3F4F6 0%, #E5E7EB 100%);
}

.notif-icon-box.withdrawal-bg {
  background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
}

.notif-icon-box.refund-bg {
  background: linear-gradient(135deg, #FDF2F8 0%, #FCE7F3 100%);
}

.notif-icon-img {
  width: 48rpx;
  height: 48rpx;
}

.notif-content {
  flex: 1;
  min-width: 0;
}

.notif-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.notif-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0F172A;
}

.notif-time {
  font-size: 24rpx;
  color: #94A3B8;
}

.notif-desc {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.4;
  display: block;
}

.unread .notif-desc {
  color: #334155;
}

/* Empty State */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon-img {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
}
