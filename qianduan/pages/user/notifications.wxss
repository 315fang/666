.notif-list {
  padding: 24rpx;
}

.notif-item {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.04);
  position: relative;
  transition: all 0.2s;
}

.notif-item.unread::before {
  content: '';
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background: #EF4444;
  border-radius: 50%;
}

.notif-icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #F8FAFC;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.notif-icon {
  font-size: 40rpx;
}

.notif-content {
  flex: 1;
  min-width: 0;
}

.notif-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.notif-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0F172A;
}

.notif-time {
  font-size: 24rpx;
  color: #94A3B8;
}

.notif-desc {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.4;
  display: block;
}

.unread .notif-desc {
  color: #334155;
}
