/* pages/user/user.wxss - 个人中心样式 */

.container {
  min-height: 100vh;
  background: var(--color-background);
  padding-bottom: 120rpx;
}

/* ==================== 用户头部 ==================== */
.user-header {
  background: var(--color-navy);
  padding: 80rpx var(--spacing-lg) 60rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.user-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: var(--color-white);
  font-weight: 300;
}

.user-detail {
  margin-left: var(--spacing-lg);
}

.user-name {
  font-size: var(--font-size-xl);
  color: var(--color-white);
  font-weight: 400;
  letter-spacing: 2rpx;
  display: block;
}

.user-level {
  margin-top: var(--spacing-xs);
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 2rpx;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.login-title {
  font-size: var(--font-size-lg);
  color: var(--color-white);
  font-weight: 300;
  letter-spacing: 2rpx;
}

.login-prompt .btn {
  background: var(--color-white);
  color: var(--color-navy);
}

/* ==================== 订单区域 ==================== */
.section-card {
  background: var(--color-white);
  margin: var(--spacing-lg);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--color-divider);
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--color-title);
  letter-spacing: 2rpx;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--color-placeholder);
}

.arrow {
  margin-left: 4rpx;
  font-size: 28rpx;
}

.order-nav {
  display: flex;
  padding: var(--spacing-lg) 0;
}

.order-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.order-icon {
  font-size: 40rpx;
  margin-bottom: var(--spacing-sm);
}

.order-text {
  font-size: var(--font-size-sm);
  color: var(--color-secondary);
}

.order-badge {
  position: absolute;
  top: -8rpx;
  right: 20%;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: var(--color-error);
  color: var(--color-white);
  font-size: 20rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ==================== 菜单 ==================== */
.menu-section {
  background: var(--color-white);
  margin: var(--spacing-lg);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--color-divider);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: var(--spacing-md);
}

.menu-title {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--color-text);
  letter-spacing: 1rpx;
}

.menu-arrow {
  font-size: 28rpx;
  color: var(--color-placeholder);
}

/* ==================== 底部 ==================== */
.footer {
  padding: var(--spacing-xxl) var(--spacing-lg);
  text-align: center;
  font-size: var(--font-size-sm);
  color: var(--color-placeholder);
  letter-spacing: 2rpx;
}

.version {
  display: block;
  margin-top: var(--spacing-sm);
  font-size: var(--font-size-xs);
}
