/** pages/user/user.wxss - Enhanced Profile */

/* 1. Deep Midnight Header */
.user-header {
  position: relative;
  background-color: #0F172A; /* Deep Midnight */
  padding: 80rpx 40rpx 100rpx; /* Extra bottom padding for overlap */
  color: #fff;
  overflow: hidden;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
}

.header-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* Subtle Gradient */
  background: radial-gradient(circle at top right, rgba(28, 107, 242, 0.15), transparent 70%);
  z-index: 1;
  pointer-events: none;
}

.user-info-box {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

/* Avatar Glow */
.avatar-container {
  position: relative;
  width: 140rpx;
  height: 140rpx;
}

.avatar-glow {
  position: absolute;
  inset: -4rpx;
  background: rgba(28, 107, 242, 0.5); /* Blue Glow */
  border-radius: 50%;
  filter: blur(12rpx);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(0.95); opacity: 0.5; }
  50% { transform: scale(1.05); opacity: 0.8; }
  100% { transform: scale(0.95); opacity: 0.5; }
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.2);
  position: relative;
  z-index: 2;
  background-color: #1e293b;
}

.edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: var(--color-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 2rpx solid #0F172A;
  z-index: 3;
}

/* User Names */
.user-names {
  flex: 1;
}

.name-text {
  font-size: 40rpx;
  font-weight: 800;
  letter-spacing: -1rpx;
  margin-bottom: 12rpx;
}

.user-tags {
  display: flex;
  gap: 16rpx;
}

.tag-pill {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  backdrop-filter: blur(8px);
}

.tag-pill.gold {
  background: rgba(255, 215, 0, 0.15);
  color: #FFD700;
  border: 1rpx solid rgba(255, 215, 0, 0.3);
}

.tag-pill.blue {
  background: rgba(59, 130, 246, 0.15);
  color: #60A5FA;
  border: 1rpx solid rgba(59, 130, 246, 0.3);
}

/* 2. Floating Asset Card */
.asset-card-wrapper {
  padding: 0 32rpx;
  margin-top: -60rpx; /* Negative margin to float */
  position: relative;
  z-index: 20;
}

.asset-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 40rpx -10rpx rgba(0,0,0,0.08); /* Shadow Float */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.asset-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.divider {
  width: 2rpx;
  height: 40rpx;
  background-color: #E2E8F0;
}

.asset-label {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 500;
}

.asset-value {
  font-size: 32rpx;
  font-weight: 800;
  color: #0F172A;
  font-family: 'DIN Condensed', sans-serif;
}

.asset-value.highlight {
  color: var(--color-primary);
  font-size: 36rpx;
}

/* 3. Agent Banner */
.banner-wrapper {
  padding: 32rpx 32rpx 0;
}

.agent-banner {
  background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.1);
}

.banner-overlay {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 50%;
  transform: rotate(45deg);
}

.banner-content {
  position: relative; /* Above overlay */
  z-index: 2;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.banner-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.highlight { color: #60A5FA; font-size: 40rpx; }

.banner-texts { display: flex; flex-direction: column; }
.banner-title { color: #fff; font-size: 30rpx; font-weight: 700; }
.banner-sub { color: #94A3B8; font-size: 22rpx; margin-top: 4rpx; }

.arrow-circle {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 4. Section Card (Orders/Tools) */
.section-card {
  margin: 32rpx 32rpx 0;
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.mb-safe { margin-bottom: 60rpx; } /* extra space */

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
}

.card-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #94A3B8;
}

.order-icons {
  display: flex;
  justify-content: space-between;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  position: relative;
}

.icon-circle {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #F8FAFC;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  position: relative;
}

.badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  background: #EF4444;
  color: #fff;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.icon-text { font-size: 24rpx; color: #64748B; font-weight: 500; }

/* 5. Tools Grid - 使用Flexbox替代Grid */
.tools-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.tool-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 16rpx 0;
  margin: 0;
  background: transparent;
  border: none;
  box-sizing: border-box;
}

/* Reset button styles for share-btn */
button.tool-item {
  width: 25%;
  background-color: transparent !important;
  padding: 16rpx 0 !important;
  margin: 0 !important;
  border: none !important;
  font-size: inherit;
  line-height: inherit;
}

button.tool-item::after { 
  display: none !important;
  border: none !important;
  content: none !important;
}

.tool-icon { 
  font-size: 44rpx; 
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-text { 
  font-size: 24rpx; 
  color: #64748B; 
  text-align: center;
  margin-top: 8rpx;
  line-height: 1.4;
}

.text-blue { color: #3B82F6; }
.text-orange { color: #F97316; }
.text-green { color: #10B981; }
.text-purple { color: #A855F7; }
.text-pink { color: #EC4899; }
.text-gray { color: #64748B; }

/* Invite Modal */
.invite-modal {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.invite-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-content {
  background: #fff;
  width: 600rpx;
  border-radius: 32rpx;
  padding: 48rpx;
  text-align: center;
  transform: scale(0.9);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.invite-modal.show .modal-content {
  transform: scale(1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
}

.code-display {
  font-size: 48rpx;
  font-weight: 800;
  letter-spacing: 4rpx;
  color: var(--color-primary);
  background: #EFF6FF;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx dashed rgba(28, 107, 242, 0.3);
}

.modal-tip {
  font-size: 24rpx;
  color: #94A3B8;
}
