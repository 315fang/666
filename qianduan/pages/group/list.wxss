/** pages/group/list.wxss **/
.container { min-height: 100vh; background: #F7F7F7; }

/* Nav */
.nav-bar { display: flex; align-items: center; justify-content: space-between; padding: 12rpx 24rpx; background: #FFFFFF; border-bottom: 1rpx solid #F0F0F0; }
.nav-back { width: 56rpx; height: 56rpx; display: flex; align-items: center; justify-content: center; }
.nav-icon { width: 32rpx; height: 32rpx; }
.nav-title { font-size: 32rpx; font-weight: 700; color: #1A1A1A; }
.nav-placeholder { width: 56rpx; }

/* Intro */
.intro-card { margin: 20rpx 24rpx; background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%); border-radius: 24rpx; padding: 28rpx 24rpx; display: flex; align-items: center; justify-content: space-between; }
.intro-left { flex: 1; }
.intro-badge { background: rgba(255,255,255,0.25); color: #FFF; font-size: 18rpx; font-weight: 700; padding: 6rpx 14rpx; border-radius: 20rpx; }
.intro-title { display: block; font-size: 32rpx; font-weight: 800; color: #FFF; margin: 10rpx 0 6rpx; }
.intro-desc { font-size: 22rpx; color: rgba(255,255,255,0.85); line-height: 1.5; }
.intro-icon { width: 80rpx; height: 80rpx; opacity: 0.9; filter: invert(1); }

/* Member tip */
.member-tip { margin: 0 24rpx 16rpx; background: rgba(99, 102, 241, 0.08); border: 1rpx solid rgba(99, 102, 241, 0.2); border-radius: 16rpx; padding: 20rpx 24rpx; display: flex; align-items: center; gap: 16rpx; }
.tip-icon { width: 36rpx; height: 36rpx; opacity: 0.7; }
.tip-text { font-size: 22rpx; color: #6366F1; line-height: 1.6; }

/* Tab */
.tab-row { display: flex; background: #FFFFFF; border-bottom: 1rpx solid #F0F0F0; }
.tab-item { flex: 1; text-align: center; padding: 24rpx 0; font-size: 28rpx; color: #888; cursor: pointer; position: relative; }
.tab-item.active { color: #6366F1; font-weight: 700; }
.tab-item.active::after { content: ''; position: absolute; bottom: 0; left: 20%; right: 20%; height: 4rpx; background: #6366F1; border-radius: 2rpx; }

/* Empty */
.empty-wrap { display: flex; flex-direction: column; align-items: center; padding: 80rpx 0; gap: 16rpx; }
.empty-icon { width: 80rpx; height: 80rpx; opacity: 0.25; }
.empty-text { font-size: 26rpx; color: #BBB; text-align: center; line-height: 1.8; }

/* Activity list */
.activity-list { padding: 16rpx 24rpx; display: flex; flex-direction: column; gap: 16rpx; }
.activity-card { background: #FFFFFF; border-radius: 20rpx; overflow: hidden; display: flex; box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06); }
.product-img { width: 180rpx; height: 180rpx; object-fit: cover; flex-shrink: 0; }
.activity-info { flex: 1; padding: 20rpx; display: flex; flex-direction: column; justify-content: space-between; gap: 10rpx; }
.product-name { font-size: 28rpx; font-weight: 700; color: #1A1A1A; }
.price-row { display: flex; align-items: baseline; gap: 16rpx; }
.group-price { display: flex; flex-direction: column; gap: 2rpx; }
.price-label { font-size: 18rpx; color: #AAA; }
.group-price-val { font-size: 36rpx; font-weight: 800; color: #6366F1; }
.original-price { font-size: 22rpx; color: #AAA; text-decoration: line-through; }
.meta-row { display: flex; align-items: center; gap: 8rpx; }
.meta-item { font-size: 20rpx; color: #888; }
.meta-dot { color: #DDD; }
.start-btn { margin-left: auto; background: linear-gradient(135deg, #6366F1, #8B5CF6); color: #FFF; font-size: 22rpx; font-weight: 700; padding: 10rpx 20rpx; border-radius: 50rpx; white-space: nowrap; }

/* My groups */
.group-list { padding: 16rpx 24rpx 60rpx; display: flex; flex-direction: column; gap: 16rpx; }
.group-record { background: #FFFFFF; border-radius: 20rpx; overflow: hidden; display: flex; box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06); }
.record-img { width: 160rpx; height: 160rpx; object-fit: cover; flex-shrink: 0; }
.record-info { flex: 1; padding: 20rpx; display: flex; flex-direction: column; gap: 10rpx; }
.record-name { font-size: 26rpx; font-weight: 700; color: #1A1A1A; }
.member-progress { display: flex; align-items: center; gap: 12rpx; }
.member-avatars { display: flex; gap: 4rpx; }
.avatar-placeholder { width: 36rpx; height: 36rpx; border-radius: 50%; background: rgba(99, 102, 241, 0.15); border: 2rpx solid rgba(99, 102, 241, 0.3); }
.avatar-more { font-size: 18rpx; color: #6366F1; padding: 0 4rpx; }
.member-text { font-size: 22rpx; color: #6366F1; font-weight: 600; }
.group-status { font-size: 20rpx; font-weight: 700; padding: 6rpx 14rpx; border-radius: 20rpx; align-self: flex-start; }
.group-status.open { background: rgba(99, 102, 241, 0.1); color: #6366F1; }
.group-status.success { background: rgba(16, 185, 129, 0.1); color: #10B981; }
.group-status.fail, .group-status.cancelled { background: rgba(0,0,0,0.06); color: #AAA; }
.share-row { display: flex; align-items: center; gap: 8rpx; background: rgba(99, 102, 241, 0.08); padding: 10rpx 16rpx; border-radius: 16rpx; }
.share-icon { width: 28rpx; height: 28rpx; opacity: 0.7; }
.share-row text { font-size: 22rpx; color: #6366F1; font-weight: 600; }
