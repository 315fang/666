/* pages/distribution/restock.wxss - 代理商采购入仓 */
.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 24rpx;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 库存提示 */
.stock-banner {
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  border-radius: 16rpx;
  padding: 28rpx 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  margin-bottom: 28rpx;
}

.stock-banner-label {
  font-size: 28rpx;
  opacity: 0.8;
}

.stock-banner-value {
  font-size: 36rpx;
  font-weight: 700;
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

/* 标题 */
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0F172A;
  margin-bottom: 20rpx;
}

/* 商品列表 */
.product-list {
  margin-bottom: 28rpx;
}

.product-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid transparent;
  position: relative;
  transition: border-color 0.2s;
}

.product-card.selected {
  border-color: #0F172A;
}

.product-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #F1F5F9;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #0F172A;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-prices {
  display: flex;
  gap: 16rpx;
  margin-bottom: 6rpx;
}

.agent-price {
  font-size: 28rpx;
  color: #EF4444;
  font-weight: 600;
}

.retail-price {
  font-size: 24rpx;
  color: #94A3B8;
  text-decoration: line-through;
}

.product-stock {
  font-size: 22rpx;
  color: #94A3B8;
}

.check-mark {
  width: 48rpx;
  height: 48rpx;
  background: #0F172A;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  flex-shrink: 0;
}

/* 数量选择 */
.quantity-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
}

.quantity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F1F5F9;
}

.quantity-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
}

.quantity-price {
  font-size: 26rpx;
  color: #EF4444;
  font-weight: 500;
}

.quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.quantity-label {
  font-size: 28rpx;
  color: #475569;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.qty-btn {
  width: 64rpx;
  height: 64rpx;
  background: #F1F5F9;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #0F172A;
}

.qty-input {
  width: 120rpx;
  height: 64rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #0F172A;
  background: #F8FAFC;
  border-radius: 12rpx;
}

/* 快捷数量 */
.quick-qty {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.quick-btn {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 10rpx;
  font-size: 24rpx;
  background: #F1F5F9;
  color: #475569;
}

.quick-btn.active {
  background: #0F172A;
  color: #fff;
}

.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F1F5F9;
}

.total-label {
  font-size: 28rpx;
  color: #475569;
}

.total-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #EF4444;
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.action-summary {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.summary-qty {
  font-size: 24rpx;
  color: #94A3B8;
}

.summary-total {
  font-size: 36rpx;
  font-weight: 700;
  color: #EF4444;
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

.action-btn {
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  color: #fff;
  padding: 24rpx 64rpx;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
}
