/* pages/distribution/workbench.wxss - 代理商发货工作台 */
.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

/* ====== 云仓状态卡片 ====== */
.stock-card {
  background: linear-gradient(135deg, #0F172A 0%, #1E3A5F 50%, #0F172A 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(15, 23, 42, 0.3);
}

.stock-main {
  text-align: center;
  margin-bottom: 32rpx;
}

.stock-number {
  font-size: 80rpx;
  font-weight: 700;
  font-family: 'DIN Pro', -apple-system, sans-serif;
  line-height: 1;
}

.stock-label {
  font-size: 26rpx;
  opacity: 0.7;
  margin-top: 8rpx;
}

.stock-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1rpx solid rgba(255, 255, 255, 0.15);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.15);
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.6;
  margin-top: 6rpx;
}

.stock-actions {
  display: flex;
  gap: 20rpx;
}

.stock-btn {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  border-radius: 44rpx;
  font-size: 26rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
}

.stock-btn.outline {
  background: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* ====== Tab 筛选栏 ====== */
.tab-bar {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 26rpx;
  color: #64748B;
  border-radius: 12rpx;
  transition: all 0.3s;
  position: relative;
}

.tab-item.active {
  background: #0F172A;
  color: #fff;
  font-weight: 500;
}

.tab-badge {
  position: absolute;
  top: 6rpx;
  right: 12rpx;
  background: #EF4444;
  color: #fff;
  font-size: 18rpx;
  min-width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  border-radius: 14rpx;
  padding: 0 6rpx;
}

/* ====== 订单卡片 ====== */
.order-list {
  /* container */
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F1F5F9;
}

.order-no {
  font-size: 24rpx;
  color: #94A3B8;
  font-family: 'SF Mono', monospace;
}

.order-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.status-paid { background: #FFF7ED; color: #F97316; }
.status-agent_confirmed { background: #EFF6FF; color: #3B82F6; }
.status-shipping_requested { background: #FEF3C7; color: #D97706; }
.status-shipped { background: #ECFDF5; color: #10B981; }
.status-completed { background: #F0FDF4; color: #16A34A; }

.order-product {
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.product-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #F1F5F9;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #0F172A;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #94A3B8;
}

.product-price {
  font-size: 26rpx;
  color: #0F172A;
  font-weight: 600;
}

.order-address {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  background: #F8FAFC;
  padding: 16rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 16rpx;
}

.address-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.address-text {
  font-size: 24rpx;
  color: #475569;
  line-height: 1.5;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F1F5F9;
}

.action-btn {
  padding: 14rpx 36rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.action-btn.primary {
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  color: #fff;
}

.tracking-info {
  font-size: 24rpx;
  color: #64748B;
}

/* ====== 空状态 ====== */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
}

.loading-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #94A3B8;
}

/* ====== 发货弹窗 ====== */
.ship-popup {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.ship-popup.show {
  visibility: visible;
  opacity: 1;
}

.mask {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
}

.popup-content {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.ship-popup.show .popup-content {
  transform: translateY(0);
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
}

.ship-confirm-info {
  background: #F8FAFC;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: #64748B;
  width: 140rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #0F172A;
  flex: 1;
}

.info-row .value.highlight {
  color: #EF4444;
  font-weight: 600;
}

.popup-tips {
  font-size: 24rpx;
  color: #94A3B8;
  margin-bottom: 40rpx;
  text-align: center;
}

.btn-block {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #0F172A;
  color: #fff;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
}
