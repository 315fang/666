/* pages/distribution/team.wxss */
.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 30rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: #0F172A;
  border-radius: 20rpx;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
  color: #fff;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.15);
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stats-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  bottom: 20%;
  width: 1rpx;
  background: rgba(255, 255, 255, 0.1);
}

.stats-val {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  font-family: 'DIN Pro', sans-serif;
}

.stats-label {
  font-size: 24rpx;
  color: #94A3B8;
}

/* 额外统计 */
.extra-stats {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.extra-item {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(15,23,42,0.04);
}

.extra-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.extra-label {
  font-size: 22rpx;
  color: #94A3B8;
  margin-bottom: 6rpx;
}

.extra-val {
  font-size: 30rpx;
  font-weight: 600;
  color: #0F172A;
  font-family: 'DIN Pro', sans-serif;
}

/* Tab切换 */
.tab-header {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #64748B;
  transition: all 0.3s;
  border-radius: 8rpx;
}

.tab-item.active {
  background: #0F172A;
  color: #fff;
  font-weight: 500;
}

/* 列表 */
.member-list {
  height: calc(100vh - 400rpx);
}

.member-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.member-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #F1F5F9;
  margin-right: 24rpx;
}

.member-info {
  flex: 1;
}

.member-top {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #0F172A;
}

.member-tag {
  font-size: 20rpx;
  background: #EEF2FF;
  color: #4F46E5;
  padding: 2rpx 12rpx;
  border-radius: 4rpx;
  margin-left: 16rpx;
}

.member-bottom {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #94A3B8;
}

.member-sales {
  color: #0F172A;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-state text {
  color: #94A3B8;
  font-size: 28rpx;
}

.empty-tip {
  font-size: 24rpx !important;
  color: #CBD5E1 !important;
  margin-top: 8rpx;
}
