.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 24rpx;
}

.withdraw-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-header .amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #0F172A;
}

.item-header .status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.status-pending { background: #FFF7ED; color: #EA580C; }
.status-success { background: #F0FDF4; color: #16A34A; }
.status-gray { background: #F8FAFC; color: #94A3B8; }
.status-fail { background: #FEF2F2; color: #DC2626; }

.item-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #94A3B8;
}

.reject-reason {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #FEF2F2;
  color: #DC2626;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.empty-state {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94A3B8;
  font-size: 28rpx;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.loading-more, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #94A3B8;
}