.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: 40rpx;
}

/* 顶部概览 */
.stats-header {
  display: flex;
  padding: 40rpx 32rpx;
  background: #FFFFFF;
  gap: 24rpx;
}

.stat-card {
  flex: 1;
  padding: 32rpx;
  background: #F1F5F9;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
}

.stat-card .label {
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 12rpx;
}

.stat-card .amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #0F172A;
}

.stat-card .amount.sub {
  color: #334155;
}

/* 筛选栏 */
.filter-bar {
  background: #FFFFFF;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #F1F5F9;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 32rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: #64748B;
  background: #F1F5F9;
  border-radius: 30rpx;
  margin-right: 20rpx;
  transition: all 0.3s;
}

.filter-item.active {
  color: #FFFFFF;
  background: #2563EB;
  font-weight: 500;
}

/* 列表部分 */
.list-section {
  padding: 24rpx 32rpx;
}

.log-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
}

.log-left {
  display: flex;
  align-items: center;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}

.type-icon.Direct { background: #E0F2FE; }
.type-icon.Indirect { background: #DCFCE7; }
.type-icon.Stock_Diff { background: #FEF3C7; }

.info {
  display: flex;
  flex-direction: column;
}

.info .title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 8rpx;
}

.info .time {
  font-size: 22rpx;
  color: #94A3B8;
}

.log-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.log-right .amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #2563EB;
  margin-bottom: 8rpx;
}

.log-right .status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-frozen { background: #F1F5F9; color: #64748B; }
.status-pending { background: #FFF7ED; color: #EA580C; }
.status-success { background: #F0FDF4; color: #16A34A; }
.status-gray { background: #F8FAFC; color: #94A3B8; }
.status-fail { background: #FEF2F2; color: #DC2626; }

.remark {
  width: 100%;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F1F5F9;
}

.remark-text {
  font-size: 24rpx;
  color: #64748B;
  line-height: 1.5;
}

/* 状态提示 */
.loading-more, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #94A3B8;
}

.empty-state {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94A3B8;
  font-size: 28rpx;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}