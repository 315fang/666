/** pages/distribution/center.wxss - 分销中心（全新设计版）**/

.container {
  min-height: 100vh;
  background: #F8F9FA;
  padding-bottom: 40rpx;
}

/* ========== 1. 顶部背景区域 ========== */
.header-bg {
  background: linear-gradient(180deg, #1C1917 0%, #2D2A26 100%);
  padding: 40rpx 32rpx 120rpx;
  position: relative;
  overflow: hidden;
}

.header-bg::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(202, 138, 4, 0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 1;
}

/* 用户信息行 */
.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  display: block;
  margin-bottom: 8rpx;
}

.role-badge {
  display: inline-block;
  font-size: 22rpx;
  color: #CA8A04;
  background: rgba(202, 138, 4, 0.15);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(202, 138, 4, 0.3);
}

.arrow {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 余额卡片 */
.balance-card {
  background: linear-gradient(135deg, rgba(202, 138, 4, 0.2) 0%, rgba(202, 138, 4, 0.05) 100%);
  border: 1rpx solid rgba(202, 138, 4, 0.3);
  border-radius: 24rpx;
  padding: 32rpx;
  position: relative;
  backdrop-filter: blur(10rpx);
}

.balance-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 12rpx;
  display: block;
}

.balance-amount {
  font-size: 64rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: 'DIN Alternate', -apple-system, BlinkMacSystemFont, sans-serif;
  letter-spacing: -2rpx;
}

.withdraw-btn {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  background: linear-gradient(135deg, #CA8A04 0%, #A16207 100%);
  padding: 16rpx 28rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 8rpx 24rpx rgba(202, 138, 4, 0.3);
}

.withdraw-btn text {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.arrow-icon {
  font-size: 24rpx;
  color: #FFFFFF;
}

.withdraw-btn:active {
  transform: translateY(-50%) scale(0.96);
}

/* ========== 2. 统计数据栏 ========== */
.stats-bar {
  background: #FFFFFF;
  margin: -60rpx 32rpx 24rpx;
  border-radius: 20rpx;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1C1917;
  font-family: 'DIN Alternate', -apple-system, BlinkMacSystemFont, sans-serif;
  margin-bottom: 8rpx;
  display: block;
}

.stat-value .unit {
  font-size: 24rpx;
  font-weight: 500;
  color: #78716C;
  margin-left: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #78716C;
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: #E7E5E4;
}

/* ========== 3. 邀请码卡片 ========== */
.invite-card {
  background: #FFFFFF;
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.invite-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.invite-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1917;
}

.invite-subtitle {
  font-size: 24rpx;
  color: #A8A29E;
}

.invite-code-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FEF3C7;
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 20rpx;
}

.code-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #B45309;
  letter-spacing: 8rpx;
  font-family: 'DIN Alternate', -apple-system, BlinkMacSystemFont, sans-serif;
}

.copy-btn-small {
  background: #FFFFFF;
  color: #57534E;
  font-size: 26rpx;
  font-weight: 500;
  padding: 12rpx 28rpx;
  border-radius: 24rpx;
  border: 2rpx solid #E7E5E4;
}

.copy-btn-small:active {
  background: #F5F5F4;
}

.share-btn-full {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #07C160 0%, #059144 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
  line-height: 80rpx;
}

.share-btn-full::after {
  border: none;
}

.share-btn-full:active {
  opacity: 0.9;
}

.bind-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #F5F5F4;
}

.bind-tip text {
  font-size: 26rpx;
  color: #CA8A04;
}

.bind-tip .arrow {
  font-size: 24rpx;
  color: #CA8A04;
}

/* ========== 4. 功能菜单列表 ========== */
.menu-section {
  background: #FFFFFF;
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  padding: 0 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 2rpx solid #F5F5F4;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon.commission {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
}

.menu-icon.order {
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
}

.menu-icon.team {
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
}

.menu-icon.share {
  background: linear-gradient(135deg, #E0E7FF 0%, #C7D2FE 100%);
}

.icon-img {
  width: 36rpx;
  height: 36rpx;
}

.menu-name {
  font-size: 30rpx;
  color: #1C1917;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #D6D3D1;
}

/* ========== 5. 代理商专区 ========== */
.agent-section {
  background: #FFFFFF;
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-dot {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #CA8A04 0%, #A16207 100%);
  border-radius: 4rpx;
}

.title-left text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1917;
}

.agent-badge {
  font-size: 22rpx;
  color: #CA8A04;
  background: #FEF3C7;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.agent-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.agent-item {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: relative;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.agent-item.highlight {
  grid-column: span 2;
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 50%);
  border-color: rgba(202, 138, 4, 0.2);
}

.agent-item:active {
  transform: scale(0.98);
}

.item-icon {
  width: 72rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.item-icon image {
  width: 40rpx;
  height: 40rpx;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1917;
  display: block;
  margin-bottom: 6rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #78716C;
}

.item-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #EF4444;
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 600;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  min-width: 36rpx;
  text-align: center;
}

/* ========== 6. 规则说明 ========== */
.rules-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin: 0 32rpx;
  padding: 28rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.rules-icon {
  width: 32rpx;
  height: 32rpx;
}

.rules-text {
  font-size: 28rpx;
  color: #78716C;
}

.rules-section .arrow {
  font-size: 24rpx;
  color: #D6D3D1;
}

/* ========== 7. 弹窗样式 ========== */
.share-modal,
.withdraw-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.share-modal.show,
.withdraw-popup.show {
  visibility: visible;
  opacity: 1;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: all 0.3s;
}

.share-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-header text {
  font-size: 36rpx;
  font-weight: 600;
  color: #1C1917;
}

.close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #A8A29E;
}

.qr-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #F5F5F4;
  margin-bottom: 32rpx;
}

.qr-image {
  width: 320rpx;
  height: 320rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.qr-tip {
  font-size: 26rpx;
  color: #78716C;
  margin-bottom: 24rpx;
}

.save-btn {
  font-size: 28rpx;
  color: #CA8A04;
  font-weight: 500;
}

.share-actions .action-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.share-actions .action-btn.primary {
  background: linear-gradient(135deg, #07C160 0%, #059144 100%);
  color: #FFFFFF;
  border: none;
  line-height: 1;
  margin: 0;
}

.share-actions .action-btn.primary::after {
  border: none;
}

.btn-icon-img {
  width: 36rpx;
  height: 36rpx;
}

/* 提现弹窗 */
.popup-content {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 80%;
  max-width: 560rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  transition: all 0.3s;
}

.withdraw-popup.show .popup-content {
  transform: translate(-50%, -50%) scale(1);
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 16rpx;
  color: #1C1917;
}

.popup-balance {
  font-size: 26rpx;
  color: #78716C;
  text-align: center;
  margin-bottom: 40rpx;
}

.popup-input {
  background: #F8F9FA;
  height: 96rpx;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 36rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid #E7E5E4;
  color: #1C1917;
  font-weight: 600;
  font-family: 'DIN Alternate', -apple-system, BlinkMacSystemFont, sans-serif;
}

.popup-input:focus {
  border-color: #CA8A04;
}

.popup-btn {
  background: linear-gradient(135deg, #CA8A04 0%, #A16207 100%) !important;
  color: #FFFFFF !important;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 88rpx;
  margin: 0;
}

.popup-btn::after {
  border: none;
}

.popup-btn:active {
  opacity: 0.9;
}
