.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 顶部资产卡片 */
.assets-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.user-brief {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-brief .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #F1F5F9;
}

.user-brief .nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 4rpx;
  display: block;
}

.user-brief .role-tag {
  display: inline-block;
  font-size: 20rpx;
  color: #2563EB;
  background: #E0F2FE;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.balance-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 32rpx;
  background: #F1F5F9;
  border-radius: 24rpx;
}

.balance-main .label {
  font-size: 24rpx;
  color: #64748B;
  display: block;
  margin-bottom: 8rpx;
}

.balance-main .amount {
  font-size: 52rpx;
  font-weight: 700;
  color: #0F172A;
}

.withdraw-btn {
  background: #2563EB;
  color: #FFFFFF;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #F1F5F9;
  padding-top: 32rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #94A3B8;
}

/* 核心功能入口 */
.function-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 24rpx;
  padding-left: 12rpx;
  border-left: 6rpx solid #2563EB;
}

.grid-menu {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.menu-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.menu-icon.commission { background: #E0F2FE; }
.menu-icon.order { background: #DCFCE7; }
.menu-icon.team { background: #FEF3C7; }
.menu-icon.share { background: #F5F3FF; }

.menu-name {
  font-size: 24rpx;
  color: #475569;
}

/* 邀请码区域 */
.invite-section {
  margin-bottom: 24rpx;
}

.invite-box {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.invite-left .label {
  font-size: 24rpx;
  color: #94A3B8;
  display: block;
  margin-bottom: 8rpx;
}

.invite-left .code {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
  letter-spacing: 2rpx;
}

.invite-right {
  display: flex;
  gap: 16rpx;
}

.copy-btn, .share-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.copy-btn {
  background: #F1F5F9;
  color: #475569;
}

.share-btn {
  background: #2563EB !important;
  color: #FFFFFF !important;
  line-height: 1.5 !important;
  margin: 0 !important;
}

.bind-parent-tip {
  text-align: center;
  padding: 24rpx 0;
  font-size: 24rpx;
  color: #2563EB;
}

/* 工厂专区 */
.agent-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-header .title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
}

.section-header .badge {
  font-size: 20rpx;
  background: #FFF7ED;
  color: #EA580C;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.agent-grid {
  display: flex;
  gap: 16rpx;
}

.agent-card {
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 24rpx;
  position: relative;
}

.agent-card.main {
  flex: 1.5;
  background: #EEF2FF;
}

.agent-sub-grid {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1E293B;
  display: block;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 22rpx;
  color: #64748B;
}

.card-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #EF4444;
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
}

/* 提现说明 */
.footer-tips {
  padding: 32rpx;
}

.tip-title {
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 12rpx;
}

.tip-content text {
  display: block;
  font-size: 22rpx;
  color: #94A3B8;
  line-height: 1.8;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.share-modal.show {
  visibility: visible;
  opacity: 1;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: all 0.3s;
}

.share-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
}

.modal-header .close {
  font-size: 48rpx;
  color: #94A3B8;
  padding: 10rpx;
}

.qr-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #F1F5F9;
}

.qr-image {
  width: 320rpx;
  height: 320rpx;
  background: #F8FAFC;
  margin-bottom: 24rpx;
  border: 1rpx solid #F1F5F9;
}

.qr-tip {
  font-size: 24rpx;
  color: #94A3B8;
  margin-bottom: 24rpx;
}

.save-btn {
  font-size: 26rpx;
  color: #2563EB;
  font-weight: 500;
}

.share-actions {
  padding-top: 40rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.action-btn.primary {
  background: #2563EB !important;
  color: #FFFFFF !important;
}

/* 提现/绑定弹窗 */
.withdraw-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.withdraw-popup.show {
  visibility: visible;
  opacity: 1;
}

.popup-content {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 80%;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx;
  transition: all 0.3s;
}

.withdraw-popup.show .popup-content {
  transform: translate(-50%, -50%) scale(1);
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 20rpx;
}

.popup-balance {
  font-size: 24rpx;
  color: #64748B;
  text-align: center;
  margin-bottom: 40rpx;
}

.popup-input {
  background: #F1F5F9;
  height: 90rpx;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.popup-btn {
  background: #2563EB !important;
  color: #FFFFFF !important;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: 600;
}