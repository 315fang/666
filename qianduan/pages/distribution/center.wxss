/** pages/distribution/center.wxss - 轻奢风分佣中心 **/

.container {
  min-height: 100vh;
  background: var(--luxury-cream);
  padding: var(--space-md);
  box-sizing: border-box;
}

/* ========== 1. 顶部资产卡片 ========== */
.assets-card {
  background: var(--luxury-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--luxury-warm-gray);
}

.user-brief {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-lg);
}

.user-brief .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: var(--space-sm);
  background: var(--luxury-ivory);
  border: 2rpx solid var(--luxury-border);
}

.user-brief .nickname {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-2xs);
  display: block;
}

.user-brief .role-tag {
  display: inline-block;
  font-size: var(--text-xs);
  color: var(--luxury-gold);
  background: var(--luxury-gold-bg-light);
  padding: var(--space-2xs) var(--space-xs);
  border-radius: var(--radius-sm);
  font-weight: var(--font-medium);
}

.balance-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-lg);
  padding: var(--space-md);
  background: var(--luxury-ivory);
  border-radius: var(--radius-xl);
  border: 1rpx solid var(--luxury-border);
}

.balance-main .label {
  font-size: var(--text-sm);
  color: var(--text-muted);
  display: block;
  margin-bottom: var(--space-xs);
}

.balance-main .amount {
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  color: var(--luxury-gold);
  font-family: var(--font-display);
}

.withdraw-btn {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
  color: var(--luxury-white);
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-full);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  box-shadow: var(--shadow-gold);
}

.withdraw-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(202, 138, 4, 0.3);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid var(--luxury-border);
  padding-top: var(--space-md);
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-2xs);
  font-family: var(--font-display);
}

.stat-label {
  font-size: var(--text-xs);
  color: var(--text-muted);
}

/* ========== 2. 核心功能入口 ========== */
.function-section {
  background: var(--luxury-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--luxury-warm-gray);
}

.section-title {
  font-size: var(--text-base);
  font-weight: var(--font-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-md);
  padding-left: var(--space-sm);
  border-left: 6rpx solid var(--luxury-gold);
}

.grid-menu {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-sm);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-sm) 0;
  transition: transform var(--duration-fast);
}

.menu-item:active {
  transform: scale(0.95);
}

.menu-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: var(--radius-xl);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-2xl);
  margin-bottom: var(--space-xs);
  box-shadow: var(--shadow-sm);
}

.menu-icon.commission { 
  background: var(--luxury-gold-bg-light);
  color: var(--luxury-gold);
}

.menu-icon.order { 
  background: var(--color-success-bg);
  color: var(--color-success);
}

.menu-icon.team { 
  background: var(--color-warning-bg);
  color: var(--color-warning);
}

.menu-icon.share { 
  background: #F5F3FF;
  color: #8B5CF6;
}

.menu-name {
  font-size: var(--text-xs);
  color: var(--text-secondary);
  font-weight: var(--font-medium);
}

/* ========== 3. 邀请码区域 ========== */
.invite-section {
  margin-bottom: var(--space-md);
}

.invite-box {
  background: var(--luxury-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--luxury-warm-gray);
}

.invite-left .label {
  font-size: var(--text-sm);
  color: var(--text-muted);
  display: block;
  margin-bottom: var(--space-xs);
}

.invite-left .code {
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--luxury-gold);
  letter-spacing: var(--tracking-wider);
  font-family: var(--font-display);
}

.invite-right {
  display: flex;
  gap: var(--space-sm);
}

.copy-btn, .share-btn {
  font-size: var(--text-xs);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-full);
}

.copy-btn {
  background: var(--luxury-ivory);
  color: var(--text-secondary);
  border: 1rpx solid var(--luxury-border);
}

.share-btn {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%) !important;
  color: var(--luxury-white) !important;
  line-height: 1.5 !important;
  margin: 0 !important;
  box-shadow: var(--shadow-gold);
}

.bind-parent-tip {
  text-align: center;
  padding: var(--space-md) 0;
  font-size: var(--text-sm);
  color: var(--luxury-gold);
  font-weight: var(--font-medium);
}

/* ========== 4. 代理商专区 ========== */
.agent-section {
  background: var(--luxury-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--luxury-warm-gray);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.section-header .title {
  font-size: var(--text-base);
  font-weight: var(--font-bold);
  color: var(--text-primary);
}

.section-header .badge {
  font-size: var(--text-xs);
  background: var(--luxury-gold-bg);
  color: var(--luxury-gold-dark);
  padding: var(--space-2xs) var(--space-xs);
  border-radius: var(--radius-sm);
  font-weight: var(--font-medium);
}

.agent-grid {
  display: flex;
  gap: var(--space-sm);
}

.agent-card {
  background: var(--luxury-ivory);
  border-radius: var(--radius-lg);
  padding: var(--space-md);
  position: relative;
  border: 1rpx solid var(--luxury-border);
}

.agent-card.main {
  flex: 1.5;
  background: linear-gradient(135deg, var(--luxury-gold-bg-light) 0%, var(--luxury-gold-bg) 100%);
  border: 1rpx solid rgba(202, 138, 4, 0.2);
}

.agent-sub-grid {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.card-title {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--space-xs);
}

.card-desc {
  font-size: var(--text-xs);
  color: var(--text-muted);
}

.card-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: var(--color-error);
  color: var(--luxury-white);
  font-size: var(--text-xs);
  padding: var(--space-2xs) var(--space-xs);
  border-radius: var(--radius-full);
  font-weight: var(--font-semibold);
  box-shadow: var(--shadow-sm);
}

/* ========== 5. 提现说明 ========== */
.footer-tips {
  padding: var(--space-lg);
}

.tip-title {
  font-size: var(--text-sm);
  color: var(--text-muted);
  margin-bottom: var(--space-xs);
}

.tip-content text {
  display: block;
  font-size: var(--text-xs);
  color: var(--text-tertiary);
  line-height: var(--leading-relaxed);
}

.rules-link {
  color: var(--luxury-gold) !important;
  margin-top: var(--space-xs);
  font-weight: var(--font-medium);
}

/* ========== 6. 分享弹窗 ========== */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all var(--duration-normal);
}

.share-modal.show {
  visibility: visible;
  opacity: 1;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(28, 25, 23, 0.7);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--luxury-white);
  border-radius: var(--radius-2xl) var(--radius-2xl) 0 0;
  padding: var(--space-lg);
  transform: translateY(100%);
  transition: all var(--duration-normal);
  border-top: 1rpx solid var(--luxury-warm-gray);
}

.share-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  margin-bottom: var(--space-lg);
  color: var(--text-primary);
}

.modal-header .close {
  font-size: var(--text-3xl);
  color: var(--text-muted);
  padding: var(--space-xs);
}

.qr-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: var(--space-lg);
  border-bottom: 1rpx solid var(--luxury-border);
}

.qr-image {
  width: 320rpx;
  height: 320rpx;
  background: var(--luxury-cream);
  margin-bottom: var(--space-md);
  border: 1rpx solid var(--luxury-border);
  border-radius: var(--radius-md);
}

.qr-tip {
  font-size: var(--text-sm);
  color: var(--text-muted);
  margin-bottom: var(--space-md);
}

.save-btn {
  font-size: var(--text-base);
  color: var(--luxury-gold);
  font-weight: var(--font-semibold);
}

.share-actions {
  padding-top: var(--space-lg);
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-sm);
  height: 96rpx;
  border-radius: var(--radius-full);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%) !important;
  color: var(--luxury-white) !important;
  box-shadow: var(--shadow-gold);
}

/* ========== 7. 提现/绑定弹窗 ========== */
.withdraw-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all var(--duration-normal);
}

.withdraw-popup.show {
  visibility: visible;
  opacity: 1;
}

.popup-content {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 80%;
  background: var(--luxury-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-xl);
  transition: all var(--duration-normal);
  border: 1rpx solid var(--luxury-warm-gray);
  box-shadow: var(--shadow-xl);
}

.withdraw-popup.show .popup-content {
  transform: translate(-50%, -50%) scale(1);
}

.popup-title {
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  text-align: center;
  margin-bottom: var(--space-sm);
  color: var(--text-primary);
}

.popup-balance {
  font-size: var(--text-sm);
  color: var(--text-muted);
  text-align: center;
  margin-bottom: var(--space-xl);
}

.popup-input {
  background: var(--luxury-ivory);
  height: 96rpx;
  border-radius: var(--radius-lg);
  padding: 0 var(--space-md);
  font-size: var(--text-xl);
  margin-bottom: var(--space-xl);
  border: 1rpx solid var(--luxury-border);
  color: var(--text-primary);
  font-weight: var(--font-semibold);
  font-family: var(--font-display);
}

.popup-btn {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%) !important;
  color: var(--luxury-white) !important;
  height: 96rpx;
  border-radius: var(--radius-full);
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  box-shadow: var(--shadow-gold);
}

.popup-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(202, 138, 4, 0.3);
}
