/* pages/distribution/stock-logs.wxss - 库存变动日志 */
.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

/* 库存概览头部 */
.stock-header {
  background: linear-gradient(135deg, #0F172A 0%, #1E3A5F 50%, #0F172A 100%);
  border-radius: 20rpx;
  padding: 36rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(15, 23, 42, 0.3);
}

.stock-header-label {
  font-size: 24rpx;
  opacity: 0.7;
}

.stock-header-row {
  display: flex;
  align-items: baseline;
  margin-top: 8rpx;
}

.stock-header-value {
  font-size: 60rpx;
  font-weight: 700;
  font-family: 'DIN Pro', -apple-system, sans-serif;
  line-height: 1;
}

.stock-header-unit {
  font-size: 26rpx;
  opacity: 0.7;
  margin-left: 8rpx;
}

.stock-header-btn {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  padding: 16rpx 36rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 26rpx;
  color: #64748B;
  border-radius: 12rpx;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.filter-item.active {
  background: #0F172A;
  color: #fff;
  font-weight: 500;
}

.filter-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  display: inline-block;
}

.filter-dot.in { background: #10B981; }
.filter-dot.out { background: #F97316; }
.filter-item.active .filter-dot.in { background: #6EE7B7; }
.filter-item.active .filter-dot.out { background: #FDBA74; }

/* 日志卡片 */
.log-list {
  /* container */
}

.log-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-left: 6rpx solid transparent;
}

.log-card.in {
  border-left-color: #10B981;
}

.log-card.out {
  border-left-color: #F97316;
}

.log-card-left {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.log-type-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.log-type-icon.in {
  background: #ECFDF5;
}

.log-type-icon.out {
  background: #FFF7ED;
}

.log-card-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.log-card-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #0F172A;
}

.log-card-product {
  font-size: 24rpx;
  color: #334155;
}

.log-card-detail {
  font-size: 22rpx;
  color: #94A3B8;
}

.log-card-time {
  font-size: 22rpx;
  color: #CBD5E1;
}

.log-card-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.log-qty {
  font-size: 36rpx;
  font-weight: 700;
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

.log-qty.in {
  color: #10B981;
}

.log-qty.out {
  color: #F97316;
}

.log-qty-unit {
  font-size: 22rpx;
  color: #94A3B8;
  margin-top: 4rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0 80rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
  margin-bottom: 32rpx;
}

.empty-btn {
  background: #0F172A;
  color: #fff;
  padding: 18rpx 48rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #94A3B8;
}
