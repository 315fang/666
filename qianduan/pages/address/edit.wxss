/* pages/address/edit.wxss */
.container {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 20rpx 24rpx;
  padding-bottom: 200rpx;
}

.form-group {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: #334155;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  font-size: 28rpx;
  color: #0F172A;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F1F5F9;
}

.form-textarea {
  font-size: 28rpx;
  color: #0F172A;
  width: 100%;
  min-height: 80rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F1F5F9;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #0F172A;
}

.form-picker .placeholder {
  color: #94A3B8;
}

.form-picker .arrow {
  font-size: 32rpx;
  color: #94A3B8;
}

.row-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.row-between .form-label {
  margin-bottom: 0;
}

/* 保存 */
.save-section {
  padding: 40rpx 0;
}

.save-btn {
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  color: #fff;
  text-align: center;
  padding: 28rpx 0;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.save-btn.disabled {
  opacity: 0.5;
}
