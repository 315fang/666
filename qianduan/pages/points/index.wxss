/* pages/points/index.wxss - 积分中心样式 */
page {
  background: #0F172A;
  min-height: 100vh;
  font-family: -apple-system, 'PingFang SC', sans-serif;
}

.container {
  min-height: 100vh;
  background: linear-gradient(160deg, #1E293B 0%, #0F172A 60%);
  padding-bottom: env(safe-area-inset-bottom);
}

/* ===== 导航栏 ===== */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx 24rpx;
}
.nav-back {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.08);
  border-radius: 36rpx;
}
.nav-icon { width: 40rpx; height: 40rpx; filter: invert(1); }
.nav-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #F8FAFC;
  letter-spacing: 1px;
}
.nav-placeholder { width: 72rpx; }

/* ===== 主卡片 ===== */
.hero-card {
  margin: 0 32rpx 32rpx;
  background: linear-gradient(135deg, #7C3AED 0%, #4F46E5 60%, #0EA5E9 100%);
  border-radius: 32rpx;
  padding: 48rpx 40rpx 36rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(79, 70, 229, 0.4);
}
.hero-card::before {
  content: '';
  position: absolute;
  top: -60rpx; right: -60rpx;
  width: 240rpx; height: 240rpx;
  background: rgba(255,255,255,0.07);
  border-radius: 50%;
}

.level-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}
.level-text {
  background: rgba(255,255,255,0.2);
  color: #fff;
  font-size: 24rpx;
  font-weight: 800;
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  letter-spacing: 1px;
}
.level-name { color: rgba(255,255,255,0.9); font-size: 28rpx; font-weight: 600; }

.points-display {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 32rpx;
}
.points-num {
  font-size: 96rpx;
  font-weight: 800;
  color: #fff;
  letter-spacing: -2px;
}
.points-label { color: rgba(255,255,255,0.7); font-size: 28rpx; }

.level-progress { margin-bottom: 28rpx; }
.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.progress-label, .progress-tip { color: rgba(255,255,255,0.8); font-size: 24rpx; }
.progress-bar {
  height: 8rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 4rpx;
  overflow: hidden;
}
.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FCD34D, #F59E0B);
  border-radius: 4rpx;
  transition: width 0.4s ease;
  min-width: 4rpx;
}

.perks-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.perk-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255,255,255,0.15);
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
}
.perk-tag text { color: #fff; font-size: 24rpx; }
.perk-icon { width: 28rpx; height: 28rpx; filter: invert(1); }

/* ===== 签到 ===== */
.checkin-section { margin: 0 32rpx 24rpx; }
.checkin-card {
  background: rgba(255,255,255,0.06);
  border: 1rpx solid rgba(255,255,255,0.1);
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.checkin-left { display: flex; align-items: center; gap: 20rpx; }
.checkin-icon { width: 56rpx; height: 56rpx; filter: invert(0.8); }
.checkin-title { color: #F1F5F9; font-size: 30rpx; font-weight: 600; display: block; }
.checkin-streak { color: #94A3B8; font-size: 24rpx; margin-top: 4rpx; display: block; }
.checkin-btn {
  background: linear-gradient(135deg, #F59E0B, #EF4444);
  color: #fff;
  font-size: 26rpx;
  font-weight: 700;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
}
.checkin-btn.done {
  background: rgba(255,255,255,0.1);
  color: #64748B;
}

/* ===== Tab ===== */
.tab-bar {
  display: flex;
  margin: 0 32rpx 24rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 20rpx;
  padding: 6rpx;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 26rpx;
  color: #64748B;
  border-radius: 16rpx;
  transition: all 0.2s;
}
.tab-item.active {
  background: rgba(124, 58, 237, 0.6);
  color: #fff;
  font-weight: 600;
}

/* ===== 内容区 ===== */
.tab-content { margin: 0 32rpx; }

/* 任务列表 */
.task-list { display: flex; flex-direction: column; gap: 16rpx; }
.task-item {
  background: rgba(255,255,255,0.05);
  border: 1rpx solid rgba(255,255,255,0.08);
  border-radius: 20rpx;
  padding: 28rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.task-left { display: flex; align-items: flex-start; gap: 20rpx; flex: 1; }
.task-icon-wrap {
  width: 72rpx; height: 72rpx;
  background: rgba(124,58,237,0.2);
  border-radius: 20rpx;
  display: flex; align-items: center; justify-content: center;
  flex-shrink: 0;
}
.task-icon { width: 40rpx; height: 40rpx; filter: invert(0.8); }
.task-title { color: #F1F5F9; font-size: 28rpx; font-weight: 600; display: block; }
.task-desc { color: #94A3B8; font-size: 24rpx; margin-top: 6rpx; display: block; }
.task-progress-bar {
  height: 6rpx; background: rgba(255,255,255,0.1);
  border-radius: 4rpx; overflow: hidden; margin-top: 12rpx;
  position: relative; width: 200rpx;
}
.task-progress-fill { height: 100%; background: #7C3AED; border-radius: 4rpx; }
.task-progress-text { color: #64748B; font-size: 22rpx; margin-top: 6rpx; display: block; }
.task-reward {
  background: rgba(245,158,11,0.15);
  color: #F59E0B;
  font-size: 26rpx; font-weight: 700;
  padding: 12rpx 20rpx; border-radius: 16rpx;
  white-space: nowrap; flex-shrink: 0; margin-left: 16rpx;
}
.task-reward.done { background: rgba(255,255,255,0.06); color: #475569; }

/* 流水列表 */
.log-list { display: flex; flex-direction: column; }
.log-item {
  display: flex; justify-content: space-between; align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid rgba(255,255,255,0.06);
}
.log-type { color: #E2E8F0; font-size: 28rpx; display: block; }
.log-time { color: #64748B; font-size: 22rpx; margin-top: 6rpx; display: block; }
.log-points { font-size: 32rpx; font-weight: 700; }
.log-points.positive { color: #10B981; }
.log-points.negative { color: #EF4444; }

/* 等级特权 */
.level-card {
  background: rgba(255,255,255,0.04);
  border: 1rpx solid rgba(255,255,255,0.08);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
}
.level-card.unlocked { border-color: rgba(124,58,237,0.4); }
.level-header { display: flex; align-items: center; gap: 16rpx; margin-bottom: 20rpx; }
.lv-badge {
  padding: 6rpx 16rpx; border-radius: 12rpx;
  font-size: 24rpx; font-weight: 800; color: #fff;
}
.lv-1 { background: #6B7280; }
.lv-2 { background: #2563EB; }
.lv-3 { background: #7C3AED; }
.lv-4 { background: linear-gradient(135deg, #F59E0B, #EF4444); }
.lv-name { color: #E2E8F0; font-size: 28rpx; font-weight: 600; flex: 1; }
.lv-req { color: #64748B; font-size: 24rpx; }
.lv-status { display: flex; align-items: center; gap: 6rpx; }
.lv-status text { color: #10B981; font-size: 24rpx; }
.check-icon { width: 28rpx; height: 28rpx; filter: invert(0.5) sepia(1) saturate(2) hue-rotate(95deg); }
.perk-item { display: flex; align-items: center; gap: 12rpx; padding: 10rpx 0; }
.perk-dot { width: 24rpx; height: 24rpx; filter: invert(0.5); }
.perk-text { color: #CBD5E1; font-size: 26rpx; }

/* 空状态 */
.empty-tip {
  display: flex; flex-direction: column; align-items: center;
  padding: 80rpx 0; color: #475569;
}
.empty-icon { width: 80rpx; height: 80rpx; filter: invert(0.3); margin-bottom: 20rpx; }

/* 骨架屏 */
.skeleton { opacity: 0.5; }
.sk-line { height: 32rpx; background: rgba(255,255,255,0.1); border-radius: 8rpx; }
.sk-wide { width: 80%; }
.sk-medium { width: 50%; }
