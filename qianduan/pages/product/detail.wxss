/** pages/product/detail.wxss - 成熟电商风格 */

/* ========== 基础容器 ========== */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 120rpx;
}

/* ========== 1. 顶部导航 ========== */
.nav-float-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  pointer-events: none;
}

.nav-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  pointer-events: auto;
}

.nav-right-actions {
  display: flex;
  gap: 20rpx;
}

.nav-btn-circle {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  flex-shrink: 0;
}

.nav-btn-circle::after {
  border: none;
}

.nav-icon {
  font-size: 32rpx;
  color: #fff;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon.filled {
  color: #EF4444;
}

/* ========== 2. 商品图库 ========== */
.gallery-section {
  position: relative;
  width: 100%;
  height: 750rpx;
  background: #fff;
}

.gallery-swiper {
  width: 100%;
  height: 100%;
}

.gallery-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gallery-count {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* ========== 3. 商品信息卡片 ========== */
.product-card {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 24rpx 24rpx;
}

.price-section {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
  line-height: 1;
}

.price-symbol {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF4D4F;
  margin-right: 4rpx;
}

.price-value {
  font-size: 64rpx;
  font-weight: 700;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  color: #FF4D4F;
  letter-spacing: -1rpx;
  line-height: 1;
}

.price-origin {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-bottom: 6rpx;
}

.price-discount {
  background: #FFF1F0;
  color: #FF4D4F;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.stats-item {
  font-size: 24rpx;
  color: #999;
}

.stats-divider {
  display: none;
}

.product-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.tags-row {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

.tag-blue {
  background: #E6F7FF;
  color: #1890FF;
}

.tag-green {
  background: #F6FFED;
  color: #52C41A;
}

.tag-orange {
  background: #FFF7E6;
  color: #FA8C16;
}

.commission-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #FFF7E6 0%, #FFECD2 100%);
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-top: 24rpx;
  border: 1rpx solid #FFD591;
}

.commission-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.commission-icon {
  font-size: 28rpx;
}

.commission-text {
  font-size: 26rpx;
  color: #D48806;
  font-weight: 500;
}

.commission-arrow {
  color: #D48806;
  font-size: 28rpx;
}

/* ========== 4. 服务保障 ========== */
.section-card {
  background: #fff;
  padding: 28rpx 32rpx;
  margin-bottom: 16rpx;
}

.service-grid {
  display: flex;
  justify-content: space-between;
}

.service-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.service-icon {
  color: #52C41A;
  font-size: 24rpx;
  font-weight: 600;
}

.service-text {
  font-size: 24rpx;
  color: #666;
}

/* ========== 5. 规格选择 ========== */
.spec-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selector-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.selector-label {
  font-size: 28rpx;
  color: #999;
}

.selector-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.selector-arrow {
  color: #CCC;
  font-size: 32rpx;
}

/* ========== 6. 评价预览 ========== */
.reviews-section {
  padding-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title-bar {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.review-count {
  font-size: 26rpx;
  color: #999;
  font-weight: 400;
  margin-left: 8rpx;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #666;
}

.review-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.review-tag {
  font-size: 22rpx;
  color: #666;
  background: #F5F5F5;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.review-item {
  padding: 24rpx 0;
  border-top: 1rpx solid #F0F0F0;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.review-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #F5F5F5;
}

.review-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.review-stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 24rpx;
  color: #DDD;
}

.star.filled {
  color: #FFB800;
}

.review-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* ========== 7. 商品详情 ========== */
.detail-section {
  padding: 32rpx;
}

.detail-content {
  font-size: 26rpx;
  line-height: 1.8;
  color: #333;
}

.detail-content image {
  max-width: 100% !important;
  height: auto !important;
  display: block;
  margin: 16rpx 0;
  border-radius: 8rpx;
}

/* ========== SKU弹窗 ========== */
.sku-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.sku-modal.show {
  visibility: visible;
  opacity: 1;
}

.sku-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.sku-modal.show .sku-content {
  transform: translateY(0);
}

.sku-header {
  display: flex;
  padding: 32rpx;
  position: relative;
  border-bottom: 1rpx solid #F0F0F0;
  flex-shrink: 0;
}

.sku-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  margin-top: -40rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.sku-info {
  margin-left: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sku-price {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF4D4F;
}

.sku-stock {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.sku-selected {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 36rpx;
}

.sku-scroll {
  flex: 1;
  overflow: hidden;
  padding: 32rpx;
}

.spec-group {
  margin-bottom: 40rpx;
}

.spec-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 20rpx;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-option {
  padding: 16rpx 36rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.spec-option.active {
  background: #FFF1F0;
  color: #FF4D4F;
  border-color: #FF4D4F;
}

.qty-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 32rpx;
  border-top: 1rpx solid #F0F0F0;
}

.qty-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.stepper {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 8rpx;
  overflow: hidden;
}

.stepper-btn {
  width: 64rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  background: #FAFAFA;
}

.stepper-btn.disabled {
  color: #CCC;
}

.stepper-input {
  width: 80rpx;
  height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #F5F5F5;
}

.sku-footer {
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #F0F0F0;
  flex-shrink: 0;
}

.sku-btn-group {
  display: flex;
  gap: 24rpx;
}

.sku-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.sku-btn-cart {
  background: #FFD591;
  color: #D48806;
}

.sku-btn-buy {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF4D4F 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 79, 0.3);
}

/* ========== 底部操作栏 ========== */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  box-sizing: border-box;
}

.action-icons {
  display: flex;
  gap: 40rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.action-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
  position: relative;
  background: transparent;
  padding: 0;
  line-height: normal;
  width: auto;
}

.action-icon::after {
  border: none;
}

.icon-img {
  width: 40rpx;
  height: 40rpx;
}

.icon-label {
  font-size: 20rpx;
  color: #666;
}

.icon-badge {
  position: absolute;
  top: -4rpx;
  right: -8rpx;
  background: #FF4D4F;
  color: #fff;
  font-size: 18rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 16rpx;
  padding: 0 8rpx;
  font-weight: 500;
}

.action-buttons {
  flex: 1;
  display: flex;
  gap: 20rpx;
  height: 80rpx;
}

.action-btn {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  white-space: nowrap;
}

.action-btn-secondary {
  background: #FFF1F0;
  color: #FF4D4F;
  border: 1rpx solid #FFCCC7;
}

.action-btn-primary {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF4D4F 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 79, 0.3);
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
