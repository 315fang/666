/** pages/product/detail.wxss - 轻奢风商品详情页 V2.0 */

/* 引入图标样式 */
@import "/assets/icons/icon-styles.wxss";

/* ========== 基础容器 ========== */
.container {
  min-height: 100vh;
  background: var(--luxury-cream);
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* ========== 1. 浮动导航栏 ========== */
.nav-float-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  pointer-events: none;
}

.nav-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  pointer-events: auto;
}

.nav-right-actions {
  display: flex;
  gap: 20rpx;
}

.nav-btn-circle {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: rgba(28, 25, 23, 0.6);
  backdrop-filter: blur(20rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(250, 250, 249, 0.15);
  flex-shrink: 0;
  transition: all var(--duration-normal);
}

.nav-btn-circle:active {
  transform: scale(0.92);
  background: rgba(28, 25, 23, 0.8);
}

.nav-btn-circle::after {
  border: none;
}

.nav-icon-img {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) invert(1);
}

.nav-icon-img.filled {
  filter: brightness(1) sepia(1) saturate(5) hue-rotate(-10deg);
}

/* ========== 2. 商品图库 ========== */
.gallery-section {
  position: relative;
  width: 100%;
  height: 750rpx;
  background: linear-gradient(180deg, var(--luxury-ivory) 0%, var(--luxury-cream) 100%);
  overflow: hidden;
}

.gallery-swiper {
  width: 100%;
  height: 100%;
}

.gallery-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gallery-count {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  background: rgba(28, 25, 23, 0.6);
  backdrop-filter: blur(10rpx);
  color: var(--luxury-white);
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: var(--radius-full);
  border: 1rpx solid rgba(250, 250, 249, 0.2);
}

/* ========== 3. 商品信息卡片 ========== */
.product-info-card {
  background: var(--luxury-white);
  padding: 40rpx 32rpx;
  margin: -40rpx 24rpx 24rpx;
  border-radius: var(--radius-2xl);
  box-shadow: var(--shadow-lg);
  position: relative;
  z-index: 10;
  border: 1rpx solid var(--luxury-warm-gray);
}

/* 价格区域 */
.price-section {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
  line-height: 1;
}

.price-symbol {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--luxury-gold);
  margin-right: 4rpx;
  font-family: var(--font-display);
}

.price-value {
  font-size: 72rpx;
  font-weight: 700;
  font-family: var(--font-display);
  color: var(--luxury-gold);
  letter-spacing: -2rpx;
  line-height: 1;
}

.price-origin {
  font-size: 28rpx;
  color: var(--text-muted);
  text-decoration: line-through;
  margin-bottom: 12rpx;
}

.price-discount {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
  color: var(--luxury-white);
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
  font-weight: 600;
  margin-bottom: 14rpx;
  box-shadow: var(--shadow-gold);
}

/* 销量统计 */
.stats-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 28rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid var(--luxury-warm-gray);
  border-bottom: 1rpx solid var(--luxury-warm-gray);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stat-icon {
  width: 32rpx;
  height: 32rpx;
}

.stat-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.stat-divider {
  width: 1rpx;
  height: 24rpx;
  background: var(--luxury-border);
}

/* 商品标题 */
.product-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 服务标签 */
.tags-row {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  padding: 10rpx 20rpx;
  border-radius: var(--radius-full);
  font-weight: 500;
  transition: all var(--duration-fast);
}

.tag-icon {
  width: 24rpx;
  height: 24rpx;
}

.tag-blue {
  background: var(--color-info-bg);
  color: var(--color-info);
}

.tag-green {
  background: var(--color-success-bg);
  color: var(--color-success);
}

.tag-orange {
  background: var(--color-warning-bg);
  color: var(--color-warning);
}

/* 代理佣金条 */
.commission-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, var(--luxury-gold-bg-light) 0%, var(--luxury-gold-bg) 100%);
  padding: 24rpx;
  border-radius: var(--radius-xl);
  margin-top: 32rpx;
  border: 1rpx solid rgba(202, 138, 4, 0.2);
  position: relative;
  overflow: hidden;
}

.commission-bar::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(202, 138, 4, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.commission-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: relative;
  z-index: 1;
}

.commission-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-gold);
}

.commission-icon {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) invert(1);
}

.commission-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.commission-text {
  font-size: 28rpx;
  color: var(--luxury-gold);
  font-weight: 700;
}

.commission-sub {
  font-size: 22rpx;
  color: var(--text-tertiary);
}

.commission-arrow {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

/* ========== 4. 通用区块卡片 ========== */
.section-card {
  background: var(--luxury-white);
  padding: 32rpx;
  margin: 0 24rpx 24rpx;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--luxury-warm-gray);
}

/* 服务保障 */
.service-section {
  padding: 32rpx;
}

.service-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  letter-spacing: var(--tracking-wide);
}

/* 抛物线动画小球 */
.fly-ball {
  width: 40rpx;
  height: 40rpx;
  background: var(--luxury-gold);
  border-radius: 50%;
  position: fixed;
  z-index: 9999;
  opacity: 0;
  pointer-events: none;
  box-shadow: 0 0 10rpx rgba(202, 138, 4, 0.5);
  transition: transform 0.5s cubic-bezier(0.2, -0.3, 0.8, 0), opacity 0.5s ease;
}

.fly-ball.flying {
  opacity: 1;
}

.service-grid {
  display: flex;
  justify-content: space-between;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.service-icon-wrap {
  width: 72rpx;
  height: 72rpx;
  background: var(--luxury-ivory);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--duration-fast);
}

.service-item:active .service-icon-wrap {
  transform: scale(0.95);
  background: var(--luxury-gold-bg-light);
}

.service-icon {
  width: 36rpx;
  height: 36rpx;
}

.service-text {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 规格选择区域（页面展示） */
.spec-section {
  padding: 32rpx;
}

.spec-group {
  margin-bottom: 32rpx;
}

.spec-group:last-child {
  margin-bottom: 0;
}

.spec-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  letter-spacing: var(--tracking-wide);
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.spec-option {
  padding: 16rpx 32rpx;
  background: var(--luxury-ivory);
  border-radius: var(--radius-md);
  font-size: 26rpx;
  color: var(--text-secondary);
  border: 2rpx solid transparent;
  transition: all var(--duration-fast);
}

.spec-option:active {
  transform: scale(0.98);
}

.spec-option.active {
  background: var(--luxury-gold-bg);
  color: var(--luxury-gold);
  border-color: var(--luxury-gold);
  font-weight: 600;
}

/* 数量选择（页面展示） */
.qty-section-page {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
}

.qty-section-page .qty-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: var(--tracking-wide);
}

.qty-section-page .stock-text {
  font-size: 24rpx;
  color: var(--text-muted);
}

/* ========== 5. 评价区域 ========== */
.reviews-section {
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: var(--tracking-wide);
}

.review-count {
  font-size: 26rpx;
  color: var(--text-muted);
  font-weight: 400;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
  transition: all var(--duration-fast);
}

.section-more:active {
  color: var(--luxury-gold);
}

.review-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
}

.review-tag {
  font-size: 22rpx;
  color: var(--text-secondary);
  background: var(--luxury-ivory);
  padding: 12rpx 24rpx;
  border-radius: var(--radius-full);
  border: 1rpx solid var(--luxury-warm-gray);
}

.review-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.review-item {
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid var(--luxury-warm-gray);
}

.review-item:last-child {
  padding-bottom: 0;
  border-bottom: none;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.review-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: var(--luxury-ivory);
  border: 2rpx solid var(--luxury-warm-gray);
}

.review-user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.review-name {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.review-stars {
  display: flex;
  gap: 6rpx;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.3;
}

.star-icon.filled {
  opacity: 1;
}

.review-date {
  font-size: 22rpx;
  color: var(--text-muted);
}

.review-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.7;
}

/* ========== 6. 商品详情 ========== */
.detail-section {
  padding: 40rpx 32rpx;
}

.section-title-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.title-line {
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, var(--luxury-border), transparent);
}

.detail-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
}

.detail-content image,
.detail-content img {
  max-width: 100% !important;
  height: auto !important;
  display: block;
  margin: 24rpx 0;
  border-radius: var(--radius-md);
}

/* 底部安全区域 */
.bottom-safe-area {
  height: calc(140rpx + env(safe-area-inset-bottom));
}

/* ========== 7. 底部操作栏 ========== */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: var(--luxury-white);
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -8rpx 32rpx rgba(28, 25, 23, 0.08);
  z-index: 100;
  box-sizing: border-box;
  border-top: 1rpx solid var(--luxury-warm-gray);
}

.action-icons {
  display: flex;
  gap: 48rpx;
  margin-right: 40rpx;
  flex-shrink: 0;
}

.action-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  position: relative;
  background: transparent;
  padding: 0;
  line-height: normal;
  width: auto;
  transition: all var(--duration-fast);
}

.action-icon:active {
  transform: scale(0.92);
  opacity: 0.8;
}

.action-icon::after {
  border: none;
}

.icon-img {
  width: 44rpx;
  height: 44rpx;
}

.icon-label {
  font-size: 20rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.icon-badge {
  position: absolute;
  top: -8rpx;
  right: -12rpx;
  background: var(--color-error);
  color: var(--luxury-white);
  font-size: 20rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: var(--radius-full);
  padding: 0 10rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(220, 38, 38, 0.3);
}

.action-buttons {
  flex: 1;
  display: flex;
  gap: 20rpx;
  height: 88rpx;
}

.action-btn {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  font-size: 28rpx;
  font-weight: 600;
  white-space: nowrap;
  transition: all var(--duration-fast);
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn-cart {
  background: var(--luxury-ivory);
  color: var(--text-primary);
  border: 2rpx solid var(--luxury-border);
}

.action-btn-cart:active {
  background: var(--luxury-warm-gray);
}

.action-btn-buy {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
  color: var(--luxury-white);
  box-shadow: var(--shadow-gold);
}

.action-btn-buy:active {
  box-shadow: 0 4rpx 16rpx rgba(202, 138, 4, 0.3);
}

/* ========== 图标尺寸工具类 ========== */
.icon-xs {
  width: 24rpx;
  height: 24rpx;
}

.icon-sm {
  width: 32rpx;
  height: 32rpx;
}

.icon-md {
  width: 44rpx;
  height: 44rpx;
}
