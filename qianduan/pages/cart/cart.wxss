/* pages/cart/cart.wxss - 购物车样式 */

.container {
  background: #F8FAFC; /* Slate-50 */
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* ==================== 空购物车 ==================== */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 32rpx;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  background: #F1F5F9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin-bottom: 48rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A; /* Slate-900 */
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #64748B; /* Slate-500 */
  margin-bottom: 64rpx;
}

/* ==================== 购物车列表 ==================== */
.cart-list {
  padding: 32rpx;
}

.cart-item {
  display: flex;
  padding: 32rpx;
  margin-bottom: 32rpx;
  background: #ffffff;
  border-radius: 32rpx; /* Rounded-32rpx */
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
  position: relative;
}

/* 复选框 */
.checkbox-wrapper {
  padding-right: 24rpx;
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #CBD5E1; /* Slate-300 */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

/* Selected State: Radio Style (Circle in Circle) */
.checkbox.checked {
  border-color: var(--color-primary); /* Blue-600 */
  background: transparent;
}

.checkbox.checked::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: var(--color-primary);
  border-radius: 50%;
}

/* Hide original checkmark */
.checkbox text {
  display: none;
}

/* 商品图片 */
.product-image-wrapper {
  width: 192rpx; /* w-24 approx */
  height: 192rpx;
  border-radius: 32rpx; /* rounded-2xl approx */
  overflow: hidden;
  background: #F1F5F9;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 商品信息 */
.product-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A; /* Slate-900 */
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-spec {
  font-size: 22rpx;
  color: #94A3B8; /* Slate-400 */
  margin-top: 8rpx;
}

.price-quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: auto;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-accent); /* Amber-600 */
  font-family: 'DIN Condensed', sans-serif;
}

.product-price::before {
  content: '¥';
  font-size: 20rpx;
  margin-right: 2rpx;
  font-weight: 700;
}

/* 数量控制 - Capsule Style */
.quantity-control {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 999rpx;
  padding: 4rpx 12rpx;
  height: 56rpx;
  box-sizing: border-box;
}

.qty-btn {
  width: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #64748B;
  background: transparent;
  box-shadow: none;
}

.qty-btn.disabled {
  color: #CBD5E1;
}

.qty-num {
  min-width: 48rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #0F172A;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #94A3B8;
}

/* ==================== 底部结算栏 ==================== */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 48rpx;
  border-top: 1rpx solid #E2E8F0;
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #0F172A;
}

.select-all .checkbox {
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid var(--color-primary); /* Blue Ring */
  border-radius: 50%;
  padding: 4rpx; /* Space for inner dot */
  background: transparent;
  box-sizing: border-box;
}

/* Inner Dot for Select All */
.select-all .checkbox.checked {
  border-color: var(--color-primary);
  background: transparent;
}
.select-all .checkbox.checked::after {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  background: var(--color-primary);
  border-radius: 50%;
}

.total-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 32rpx;
}

.total-label {
  display: flex;
  align-items: baseline;
  text-align: right;
  flex-direction: column;
  margin-right: 16rpx;
}

.total-label text:first-child {
  font-size: 22rpx;
  color: #64748B;
}

.total-price {
  font-size: 36rpx !important;
  font-weight: 700 !important;
  color: var(--color-accent) !important; /* Amber-600 */
  font-family: 'DIN Condensed', sans-serif;
}

.total-price::before {
  content: '¥';
  font-size: 24rpx;
}

.total-count {
  display: none; /* Hidden in design reference */
}

.checkout-btn {
  background: var(--color-primary); /* Blue-600 */
  color: #ffffff;
  padding: 0 64rpx;
  height: 88rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 10rpx 20rpx rgba(37, 99, 235, 0.2);
  transition: transform 0.2s;
}

.checkout-btn:active {
  transform: scale(0.96);
}

.checkout-btn.disabled {
  background: #E2E8F0;
  color: #94A3B8;
  box-shadow: none;
}

/* ==================== 加载状态 ==================== */
.loading {
  padding: 100rpx 0;
  text-align: center;
  color: #94A3B8;
}
