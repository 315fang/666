/* pages/cart/cart.wxss - 购物车样式 */

.container {
  background: var(--color-white);
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* ==================== 空购物车 ==================== */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx var(--spacing-lg);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.3;
}

.empty-title {
  font-size: var(--font-size-lg);
  font-weight: 400;
  color: var(--color-title);
  letter-spacing: 2rpx;
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: var(--font-size-md);
  color: var(--color-placeholder);
  margin-bottom: var(--spacing-xl);
}

/* ==================== 购物车列表 ==================== */
.cart-list {
  padding: var(--spacing-lg);
}

.cart-item {
  display: flex;
  align-items: flex-start;
  padding: var(--spacing-lg) 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.cart-item:last-child {
  border-bottom: none;
}

/* 复选框 */
.checkbox-wrapper {
  padding-right: var(--spacing-md);
  padding-top: var(--spacing-lg);
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid var(--color-border);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--color-white);
  transition: all 0.2s;
}

.checkbox.checked {
  background: var(--color-navy);
  border-color: var(--color-navy);
}

/* 商品图片 */
.product-image-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  background: var(--color-background);
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.product-info {
  flex: 1;
  margin-left: var(--spacing-md);
  display: flex;
  flex-direction: column;
  min-height: 180rpx;
}

.product-name {
  font-size: var(--font-size-md);
  color: var(--color-text);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-spec {
  font-size: var(--font-size-sm);
  color: var(--color-placeholder);
  background: var(--color-background);
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
  margin-top: var(--spacing-sm);
  display: inline-block;
  align-self: flex-start;
}

.price-quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.product-price {
  font-size: var(--font-size-lg);
  font-weight: 500;
  color: var(--color-title);
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

.product-price::before {
  content: '¥';
  font-size: var(--font-size-sm);
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  background: var(--color-background);
  border-radius: var(--radius-sm);
}

.qty-btn {
  width: 56rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--color-text);
}

.qty-btn.disabled {
  color: var(--color-placeholder);
}

.qty-num {
  min-width: 56rpx;
  text-align: center;
  font-size: var(--font-size-md);
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: var(--spacing-lg);
  right: 0;
  padding: var(--spacing-sm);
  font-size: 32rpx;
  opacity: 0.4;
}

/* ==================== 底部结算栏 ==================== */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: var(--color-white);
  display: flex;
  align-items: center;
  padding: 0 var(--spacing-lg);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  padding-right: var(--spacing-lg);
  font-size: var(--font-size-md);
  color: var(--color-secondary);
}

.select-all .checkbox {
  margin-right: var(--spacing-sm);
}

.total-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-right: var(--spacing-lg);
}

.total-label text {
  font-size: var(--font-size-md);
  color: var(--color-text);
}

.total-price {
  font-size: var(--font-size-xl) !important;
  font-weight: 500 !important;
  color: var(--color-title) !important;
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

.total-price::before {
  content: '¥';
  font-size: var(--font-size-md);
}

.total-count {
  font-size: var(--font-size-sm);
  color: var(--color-placeholder);
  margin-top: 4rpx;
}

.checkout-btn {
  background: var(--color-navy);
  color: var(--color-white);
  padding: 0 var(--spacing-xl);
  height: 80rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-md);
  font-weight: 500;
  letter-spacing: 2rpx;
}

.checkout-btn.disabled {
  background: var(--color-border);
  color: var(--color-placeholder);
}

/* ==================== 加载状态 ==================== */
.loading {
  padding: 100rpx 0;
}
