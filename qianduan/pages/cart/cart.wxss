/* pages/cart/cart.wxss - 购物车样式 */

.container {
  background: #F8FAFC; /* Slate-50 */
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* ==================== 空购物车 ==================== */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 32rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  inset: -8rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  z-index: -1;
}

.empty-icon-img {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0F172A; /* Slate-900 */
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #64748B; /* Slate-500 */
  margin-bottom: 64rpx;
}

/* ==================== 购物车列表 ==================== */
.cart-list {
  padding: 32rpx;
}

.cart-item {
  display: flex;
  padding: 32rpx;
  margin-bottom: 32rpx;
  background: #ffffff;
  border-radius: 32rpx; /* Rounded-32rpx */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.cart-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.08);
}

/* 复选框 */
.checkbox-wrapper {
  padding-right: 24rpx;
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #CBD5E1; /* Slate-300 */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.checkbox:active {
  transform: scale(0.9);
}

/* Selected State: Radio Style (Circle in Circle) */
.checkbox.checked {
  border-color: var(--color-primary); /* Blue-600 */
  background: transparent;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.checkbox.checked::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  animation: checkPulse 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes checkPulse {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Hide original checkmark */
.checkbox text {
  display: none;
}

/* 商品图片 */
.product-image-wrapper {
  width: 192rpx; /* w-24 approx */
  height: 192rpx;
  border-radius: 32rpx; /* rounded-2xl approx */
  overflow: hidden;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.product-image-wrapper:active .product-image {
  transform: scale(1.05);
}

/* 商品信息 */
.product-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A; /* Slate-900 */
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-spec {
  font-size: 22rpx;
  color: #94A3B8; /* Slate-400 */
  margin-top: 8rpx;
}

.price-quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: auto;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-accent); /* Amber-600 */
  font-family: 'DIN Condensed', sans-serif;
}

.product-price::before {
  content: '¥';
  font-size: 20rpx;
  margin-right: 2rpx;
  font-weight: 700;
}

/* 数量控制 - Capsule Style */
.quantity-control {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 2rpx solid #e2e8f0;
  border-radius: 999rpx;
  padding: 4rpx 12rpx;
  height: 56rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}

.quantity-control:active {
  background: #f1f5f9;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

.qty-btn {
  width: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  background: transparent;
  box-shadow: none;
  transition: all 0.2s;
}

.qty-btn:active {
  transform: scale(0.9);
}

.qty-btn.disabled {
  color: #CBD5E1;
}

.qty-num {
  min-width: 48rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #94A3B8;
  border-radius: 50%;
  transition: all 0.2s;
}

.delete-btn:active {
  background: #fef2f2;
  color: #ef4444;
  transform: scale(0.9);
}

/* ==================== 底部结算栏 ==================== */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 48rpx;
  border-top: 1rpx solid #E2E8F0;
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #0F172A;
}

.select-all .checkbox {
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid var(--color-primary); /* Blue Ring */
  border-radius: 50%;
  padding: 4rpx; /* Space for inner dot */
  background: transparent;
  box-sizing: border-box;
}

/* Inner Dot for Select All */
.select-all .checkbox.checked {
  border-color: var(--color-primary);
  background: transparent;
}
.select-all .checkbox.checked::after {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  background: var(--color-primary);
  border-radius: 50%;
}

.total-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 32rpx;
}

.total-label {
  display: flex;
  align-items: baseline;
  text-align: right;
  flex-direction: column;
  margin-right: 16rpx;
}

.total-label text:first-child {
  font-size: 22rpx;
  color: #64748B;
}

.total-price {
  font-size: 36rpx !important;
  font-weight: 700 !important;
  color: var(--color-accent) !important; /* Amber-600 */
  font-family: 'DIN Condensed', sans-serif;
}

.total-price::before {
  content: '¥';
  font-size: 24rpx;
}

.total-count {
  display: none; /* Hidden in design reference */
}

.checkout-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 0 64rpx;
  height: 88rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.checkout-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.checkout-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.checkout-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.checkout-btn.disabled {
  background: #E2E8F0;
  color: #94A3B8;
  box-shadow: none;
}

/* ==================== 加载状态 ==================== */
.loading {
  padding: 100rpx 0;
  text-align: center;
  color: #94A3B8;
}
