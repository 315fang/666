/* pages/feed/index.wxss */
page {
  background-color: #0d0d0d;
  color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  overflow: hidden;
}

.feed-container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部状态栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  /* 确保不遮挡状态栏 */
  padding-top: max(40rpx, env(safe-area-inset-top)); 
}

.user-greeting {
  display: flex;
  flex-direction: column;
}

.greeting-text {
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.greeting-sub {
  font-size: 24rpx;
  color: #a3a3a3;
  margin-top: 8rpx;
}

.action-icons {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.icon {
  width: 36rpx;
  height: 36rpx;
  filter: invert(1);
}

.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background-color: #eab308;
  color: #000;
  font-size: 20rpx;
  font-weight: bold;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 6rpx;
}

/* 卡片堆叠区 */
.card-stack {
  flex: 1;
  position: relative;
  margin: 20rpx 40rpx 60rpx;
  perspective: 1000px;
}

.tinder-card {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #1a1a1a;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.5);
  transition: transform 0.3s ease, opacity 0.3s ease;
  will-change: transform, opacity;
  transform-origin: 50% 100%;
}

.card-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 渐变遮罩，为了文字可读性 */
.card-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.4) 60%, transparent 100%);
  z-index: 10;
}

/* 标签区 */
.card-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
  z-index: 20;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag {
  font-size: 22rpx;
  color: rgba(255,255,255,0.7);
  background: rgba(255,255,255,0.1);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10px);
}

.product-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  line-height: 1.3;
  color: #fff;
  text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.5);
}

/* AI 的手写信效果 */
.ai-reason {
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(16px);
  border-left: 4rpx solid #eab308;
  padding: 24rpx;
  border-radius: 0 16rpx 16rpx 0;
}

.ai-badge {
  display: block;
  font-size: 20rpx;
  color: #eab308;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.reason-text {
  font-size: 28rpx;
  color: rgba(255,255,255,0.85);
  line-height: 1.6;
}

/* 反馈水印 (NOPE/LIKE) */
.feedback-stamp {
  position: absolute;
  top: 80rpx;
  padding: 10rpx 30rpx;
  border: 6rpx solid;
  border-radius: 20rpx;
  font-size: 50rpx;
  font-weight: 800;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  z-index: 100;
  pointer-events: none;
}

.nope {
  right: 60rpx;
  color: #ef4444;
  border-color: #ef4444;
  transform: rotate(20deg);
}

.like {
  left: 60rpx;
  color: #22c55e;
  border-color: #22c55e;
  transform: rotate(-20deg);
}

/* 空状态页面 */
.empty-state {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #111;
  border-radius: 32rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-sub {
  font-size: 26rpx;
  color: #737373;
  margin-bottom: 60rpx;
}

.refresh-btn {
  background: #eab308;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  padding: 24rpx 60rpx;
  border-radius: 60rpx;
}

/* 底部操作区 (十字键) */
.action-buttons {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 20rpx 40rpx 60rpx;
}

.btn-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #1a1a1a;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.3);
  transition: transform 0.1s, background 0.2s;
}

.btn-circle:active {
  transform: scale(0.9);
}

.btn-icon {
  font-size: 50rpx;
}

.btn-dislike {
  border: 2rpx solid rgba(239, 68, 68, 0.3);
}

.btn-dislike .btn-icon {
  color: #ef4444;
}

.btn-dislike:active {
  background: rgba(239, 68, 68, 0.2);
}

.btn-like {
  border: 2rpx solid rgba(34, 197, 94, 0.3);
  width: 140rpx;
  height: 140rpx;
}

.btn-like .btn-icon {
  color: #22c55e;
  font-size: 60rpx;
}

.btn-like:active {
  background: rgba(34, 197, 94, 0.2);
}
