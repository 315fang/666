/**
 * 臻选商城 - 全局样式
 * 设计风格: 极简高端 · 蓝色轻奢
 */

/* ==================== 设计令牌 ==================== */
page {
  /* 品牌色系 - 优雅蓝 */
  --color-primary: #2563EB;
  --color-primary-light: #3B82F6;
  --color-primary-dark: #1D4ED8;
  --gradient-primary: linear-gradient(135deg, #2563EB 0%, #3B82F6 100%);
  
  /* 深邃蓝黑 */
  --color-navy: #0F172A;
  --color-navy-light: #1E293B;
  
  /* 功能色 */
  --color-success: #10B981;
  --color-warning: #F59E0B;
  --color-error: #EF4444;
  
  /* 中性色 - 冷灰色调 */
  --color-title: #0F172A;
  --color-text: #334155;
  --color-secondary: #64748B;
  --color-placeholder: #94A3B8;
  --color-border: #E2E8F0;
  --color-divider: #F1F5F9;
  --color-background: #F8FAFC;
  --color-white: #FFFFFF;
  
  /* 字号 */
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 40rpx;
  --font-size-xxl: 56rpx;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;
  
  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 999rpx;
  
  /* 投影 */
  --shadow-sm: 0 1rpx 4rpx rgba(15, 23, 42, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(15, 23, 42, 0.06);
  --shadow-lg: 0 8rpx 32rpx rgba(15, 23, 42, 0.08);
  
  /* 基础设置 */
  background-color: var(--color-background);
  font-size: var(--font-size-md);
  color: var(--color-text);
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'SF Pro Display', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
}

/* ==================== 容器 ==================== */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* ==================== 卡片 ==================== */
.card {
  background: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

/* ==================== 按钮系统 ==================== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  padding: 0 var(--spacing-xl);
  font-size: var(--font-size-md);
  font-weight: 500;
  letter-spacing: 1rpx;
  border-radius: var(--radius-full);
  border: none;
  box-sizing: border-box;
  transition: all 0.25s ease;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: var(--color-navy);
  color: var(--color-white);
}

.btn-primary:active {
  background: var(--color-navy-light);
  transform: scale(0.98);
}

.btn-secondary {
  background: transparent;
  color: var(--color-navy);
  border: 2rpx solid var(--color-navy);
}

.btn-secondary:active {
  background: rgba(15, 23, 42, 0.04);
}

.btn-ghost {
  background: transparent;
  color: var(--color-secondary);
  height: auto;
  padding: var(--spacing-sm);
}

.btn-sm {
  height: 72rpx;
  padding: 0 var(--spacing-lg);
  font-size: var(--font-size-sm);
}

.btn-block {
  display: flex;
  width: 100%;
}

.btn-disabled {
  background: var(--color-border) !important;
  color: var(--color-placeholder) !important;
}

/* ==================== 布局 ==================== */
.flex { display: flex; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-column { display: flex; flex-direction: column; }
.flex-1 { flex: 1; }

/* ==================== 文字 ==================== */
.text-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-title);
  letter-spacing: 1rpx;
}

.text-body { color: var(--color-text); }
.text-secondary { color: var(--color-secondary); }
.text-placeholder { color: var(--color-placeholder); }
.text-primary { color: var(--color-primary); }
.text-center { text-align: center; }
.text-bold { font-weight: 600; }

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* ==================== 价格 ==================== */
.price {
  color: var(--color-title);
  font-weight: 600;
  font-family: 'DIN Pro', -apple-system, sans-serif;
}

.price::before {
  content: '¥';
  font-size: 0.75em;
  margin-right: 2rpx;
}

.price-lg { font-size: var(--font-size-xl); }

.price-original {
  font-size: var(--font-size-sm);
  color: var(--color-placeholder);
  text-decoration: line-through;
  font-weight: 400;
}

/* ==================== 标签 ==================== */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  font-size: var(--font-size-xs);
  border-radius: var(--radius-sm);
  letter-spacing: 1rpx;
}

.tag-primary {
  background: rgba(37, 99, 235, 0.08);
  color: var(--color-primary);
}

/* ==================== 分割线 ==================== */
.divider {
  height: 1rpx;
  background: var(--color-divider);
}

/* ==================== 空状态 ==================== */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx var(--spacing-lg);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.4;
}

.empty-text {
  font-size: var(--font-size-md);
  color: var(--color-placeholder);
  letter-spacing: 2rpx;
}

/* ==================== 加载 ==================== */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxl);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ==================== 头像 ==================== */
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: var(--color-divider);
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

/* ==================== 输入框 ==================== */
.input {
  width: 100%;
  height: 96rpx;
  padding: 0 var(--spacing-lg);
  font-size: var(--font-size-md);
  background: var(--color-white);
  border: 1rpx solid var(--color-border);
  border-radius: var(--radius-md);
  box-sizing: border-box;
}

/* ==================== 安全区 ==================== */
.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
