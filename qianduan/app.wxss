/**
 * 臻选商城 - 全局设计系统
 * Design Source: Figma (React/Tailwind)
 */

page {
  /* ==================== 核心色彩 (Color Palette) ==================== */
  
  /* Primary - Blue */
  --color-primary: #2563EB;      /* Blue-600 */
  --color-primary-light: #3B82F6; /* Blue-500 */
  --color-primary-dark: #1D4ED8;  /* Blue-700 */
  --color-primary-fade: rgba(37, 99, 235, 0.1);

  /* Secondary / Dark - Slate */
  --color-secondary: #0F172A;     /* Slate-900 */
  --color-secondary-light: #1E293B; /* Slate-800 */

  /* Accent - Amber (Price/Gold) */
  --color-accent: #D97706;        /* Amber-600 */
  --color-accent-light: #F59E0B;  /* Amber-500 */
  --color-accent-bg: #FFFBEB;     /* Amber-50 */

  /* Semantic */
  --color-success: #10B981;       /* Emerald-500 */
  --color-success-bg: #ECFDF5;    /* Emerald-50 */
  --color-danger: #EF4444;        /* Red-500 */
  --color-danger-bg: #FEF2F2;     /* Red-50 */
  --color-warning: #F59E0B;

  /* Neutrals */
  --color-text-main: #0F172A;     /* Slate-900 */
  --color-text-sub: #64748B;      /* Slate-500 */
  --color-text-muted: #94A3B8;    /* Slate-400 */
  --color-border: #E2E8F0;        /* Slate-200 */
  --color-divider: #F1F5F9;       /* Slate-100 */
  
  /* Backgrounds */
  --color-bg-page: #F8FAFC;       /* Slate-50 */
  --color-bg-card: #FFFFFF;
  --color-bg-subtle: #F1F5F9;     /* Slate-100 */
  --color-bg-overlay: rgba(0, 0, 0, 0.6);

  /* ==================== 形状 (Shapes) ==================== */
  
  /* Radius */
  --radius-sm: 8rpx;              /* rounded-sm */
  --radius-md: 16rpx;             /* rounded-md */
  --radius-lg: 24rpx;             /* rounded-2xl */
  --radius-xl: 32rpx;             /* rounded-[32px] - Main Card Radius */
  --radius-full: 999rpx;

  /* Shadows */
  --shadow-sm: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx -1rpx rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10rpx 15rpx -3rpx rgba(0, 0, 0, 0.1), 0 4rpx 6rpx -2rpx rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20rpx 40rpx -10rpx rgba(0, 0, 0, 0.08);  /* Floating card shadow */
  --shadow-blue: 0 10rpx 25rpx -5rpx rgba(37, 99, 235, 0.25);
  --shadow-amber: 0 10rpx 25rpx -5rpx rgba(217, 119, 6, 0.25);
  --shadow-red: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
  --shadow-product: 0 4rpx 20rpx rgba(15, 23, 42, 0.06);  /* Standard product card shadow */

  /* Spacing */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;

  /* ==================== 高级风格 (Premium Styles) ==================== */

  /* Gradients - Background */
  --bg-gradient-midnight: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);  /* Deep midnight gradient */
  --bg-gradient-midnight-reverse: linear-gradient(135deg, #1E293B 0%, #0F172A 100%);  /* Reverse direction */
  --bg-gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));  /* Glass morphism */
  --bg-gradient-card: linear-gradient(to bottom, #ffffff 0%, #fafbfc 100%);  /* Subtle card gradient */
  --bg-gradient-subtle: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);  /* Neutral light gradient */
  --bg-gradient-icon: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);  /* Icon circle gradient */

  /* Gradients - Accent Colors */
  --bg-gradient-red: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);  /* Red gradient (badges, NEW tags) */
  --bg-gradient-purple: linear-gradient(135deg, #667eea 0%, #764ba2 100%);  /* Purple gradient */
  --bg-gradient-amber: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);  /* Amber/Gold gradient */
  --bg-gradient-tag: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);  /* Tag background gradient */

  /* Glow Effects */
  --glow-primary: 0 0 20rpx rgba(37, 99, 235, 0.5);  /* Blue glow */
  --glow-gold: 0 0 20rpx rgba(255, 215, 0, 0.3);  /* Gold glow */
  --glow-avatar: 0 0 20rpx rgba(102, 126, 234, 0.4);  /* Avatar glow */

  /* ==================== 统一卡片风格 (Unified Card Styles) ==================== */

  /* Card Surface */
  --card-surface: #ffffff;
  --card-radius: 32rpx;  /* 统一大圆角 - Standard large radius for all main cards */
  --card-radius-sm: 24rpx;  /* Product cards and smaller elements */
  --card-shadow-default: 0 2rpx 6rpx rgba(0,0,0,0.02);  /* Default card shadow */
  --card-shadow-float: 0 20rpx 40rpx -10rpx rgba(0,0,0,0.08);  /* Floating/elevated card */
  --card-shadow-hover: 0 12rpx 32rpx rgba(15, 23, 42, 0.12);  /* Hover state shadow */
  --card-padding: 32rpx;  /* Standard card padding */
  --card-padding-sm: 24rpx;  /* Smaller card padding */

  /* ==================== 动画与过渡 (Animations & Transitions) ==================== */

  /* Easing Functions */
  --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);  /* Standard smooth easing */
  --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);  /* Spring/bounce effect */
  --ease-in-out: ease-in-out;  /* Standard ease-in-out */

  /* Transition Durations */
  --duration-fast: 0.2s;  /* Fast transitions (buttons, hover) */
  --duration-normal: 0.3s;  /* Normal transitions (modals, cards) */
  --duration-slow: 0.5s;  /* Slow transitions (images, complex animations) */

  /* Transform Effects */
  --transform-scale-press: scale(0.96);  /* Button press effect */
  --transform-scale-hover: scale(0.98);  /* Card hover effect */
  --transform-scale-pop: scale(1.05);  /* Pop/emphasize effect */

  /* ==================== 字体系统 (Typography System) ==================== */

  /* Font Families */
  --font-display: 'DIN Condensed', 'DIN Pro', -apple-system, sans-serif;  /* Display font for prices, numbers */
  --font-system: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;  /* System font */

  /* Global Reset */
  background-color: var(--color-bg-page);
  color: var(--color-text-main);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

/* Typography Utilities */
.font-din { font-family: var(--font-display); }
.font-display { font-family: var(--font-display); }
.font-system { font-family: var(--font-system); }
.font-bold { font-weight: 700; }
.font-semibold { font-weight: 600; }
.font-medium { font-weight: 500; }

.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 48rpx; }

.text-primary { color: var(--color-primary); }
.text-secondary { color: var(--color-secondary); }
.text-accent { color: var(--color-accent); }
.text-sub { color: var(--color-text-sub); }
.text-muted { color: var(--color-text-muted); }

/* Layout Utilities */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.items-center { align-items: center; }
.justify-between { justify-content: space-between; }
.gap-1 { gap: 8rpx; }
.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }
.gap-4 { gap: 32rpx; }

/* Component Classes */
.container {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: var(--color-bg-page);
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
