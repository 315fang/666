/**
 * 臻选商城 - 现代轻奢风设计系统 V2.0
 * Modern Luxury Design System
 * 
 * 配色哲学：
 * - 深空灰 #1C1917：沉稳、信任、高端
 * - 香槟金 #CA8A04：价值、收益、奢华
 * - 珍珠白 #FAFAF9：纯净、留白、品质
 */

page {
  /* ==================== 品牌色彩系统 ==================== */
  
  /* 主色调 - 深空灰系 */
  --luxury-black: #1C1917;
  --luxury-black-light: #292524;
  --luxury-black-lighter: #44403C;
  
  /* 强调色 - 香槟金系 */
  --luxury-gold: #CA8A04;
  --luxury-gold-light: #F59E0B;
  --luxury-gold-dark: #A16207;
  --luxury-gold-bg: #FEF3C7;
  --luxury-gold-bg-light: #FFFBEB;
  
  /* 中性色 - 暖灰系 */
  --luxury-white: #FFFFFF;
  --luxury-cream: #FAFAF9;
  --luxury-ivory: #F5F5F4;
  --luxury-warm-gray: #E7E5E4;
  --luxury-border: #D6D3D1;
  --luxury-divider: #A8A29E;
  
  /* 文字色 */
  --text-primary: #1C1917;
  --text-secondary: #57534E;
  --text-tertiary: #78716C;
  --text-muted: #A8A29E;
  --text-placeholder: #D6D3D1;
  --text-inverse: #FAFAF9;
  
  /* 功能色 - 低饱和度奢华感 */
  --color-success: #059669;
  --color-success-bg: #ECFDF5;
  --color-success-light: #D1FAE5;
  
  --color-warning: #D97706;
  --color-warning-bg: #FFFBEB;
  --color-warning-light: #FEF3C7;
  
  --color-error: #DC2626;
  --color-error-bg: #FEF2F2;
  --color-error-light: #FEE2E2;
  
  --color-info: #0369A1;
  --color-info-bg: #F0F9FF;
  
  /* ==================== 兼容性变量（统一使用）==================== */
  --color-primary: var(--luxury-gold);
  --color-primary-light: var(--luxury-gold-light);
  --color-primary-dark: var(--luxury-gold-dark);
  --color-text-primary: var(--text-primary);
  --color-text-secondary: var(--text-secondary);
  --color-text-sub: var(--text-tertiary);
  --color-text-muted: var(--text-muted);
  --color-bg: var(--luxury-cream);
  --color-bg-subtle: var(--luxury-ivory);
  --color-bg-white: var(--luxury-white);
  --color-border: var(--luxury-border);
  
  /* ==================== 尺寸系统 ==================== */
  
  /* 圆角 - 柔和奢华 */
  --radius-xs: 4rpx;
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 24rpx;
  --radius-2xl: 32rpx;
  --radius-full: 9999rpx;
  
  /* 间距 - 大气留白 */
  --space-2xs: 4rpx;
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;
  --space-2xl: 64rpx;
  --space-3xl: 96rpx;
  
  /* 阴影 - 精致悬浮感 */
  --shadow-xs: 0 1rpx 2rpx rgba(28, 25, 23, 0.03);
  --shadow-sm: 0 2rpx 8rpx rgba(28, 25, 23, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(28, 25, 23, 0.06);
  --shadow-lg: 0 8rpx 32rpx rgba(28, 25, 23, 0.08);
  --shadow-xl: 0 16rpx 48rpx rgba(28, 25, 23, 0.12);
  
  /* 金色特殊阴影 */
  --shadow-gold: 0 4rpx 20rpx rgba(202, 138, 4, 0.25);
  --shadow-gold-lg: 0 8rpx 32rpx rgba(202, 138, 4, 0.3);
  
  /* 黑色特殊阴影 */
  --shadow-dark: 0 4rpx 20rpx rgba(28, 25, 23, 0.15);
  --shadow-dark-lg: 0 8rpx 32rpx rgba(28, 25, 23, 0.2);
  
  /* ==================== 字体系统 ==================== */
  --font-display: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  --font-body: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  --font-mono: 'SF Mono', Monaco, 'Cascadia Code', monospace;
  
  /* 字号 */
  --text-2xs: 20rpx;
  --text-xs: 22rpx;
  --text-sm: 24rpx;
  --text-base: 28rpx;
  --text-lg: 32rpx;
  --text-xl: 36rpx;
  --text-2xl: 40rpx;
  --text-3xl: 48rpx;
  --text-4xl: 56rpx;
  --text-5xl: 64rpx;
  
  /* 字重 */
  --font-light: 300;
  --font-normal: 400;
  --font-medium: 500;
  --font-semibold: 600;
  --font-bold: 700;
  --font-extrabold: 800;
  
  /* 行高 */
  --leading-none: 1;
  --leading-tight: 1.25;
  --leading-snug: 1.375;
  --leading-normal: 1.5;
  --leading-relaxed: 1.625;
  --leading-loose: 2;
  
  /* 字间距 */
  --tracking-tight: -0.02em;
  --tracking-normal: 0;
  --tracking-wide: 0.02em;
  --tracking-wider: 0.05em;
  --tracking-widest: 0.1em;
  
  /* ==================== 动画系统 ==================== */
  --duration-instant: 0ms;
  --duration-fast: 150ms;
  --duration-normal: 250ms;
  --duration-slow: 350ms;
  --duration-slower: 500ms;
  
  --ease-linear: linear;
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
  --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
  
  /* ==================== 组件变量 ==================== */
  
  /* 按钮 */
  --btn-height-sm: 64rpx;
  --btn-height-md: 88rpx;
  --btn-height-lg: 104rpx;
  --btn-height-xl: 120rpx;
  
  /* 卡片 */
  --card-padding-sm: 20rpx;
  --card-padding-md: 28rpx;
  --card-padding-lg: 36rpx;
  
  /* 输入框 */
  --input-height: 96rpx;
  --input-padding: 24rpx;
  
  /* ==================== 页面基础 ==================== */
  background-color: var(--luxury-cream);
  color: var(--text-primary);
  font-family: var(--font-body);
  font-size: var(--text-base);
  line-height: var(--leading-normal);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

