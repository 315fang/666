.btn-secondary:active,
.btn-outline:active,
.action-btn:active,
.submit-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
  transition: transform 0.1s ease;
}

/* 列表项点击反馈 */
.list-item:active,
.menu-item:active,
.nav-item:active {
  background-color: rgba(0, 0, 0, 0.02);
}

.cursor-pointer { cursor: pointer; }
.select-none { user-select: none; }
.select-text { user-select: text; }

/* ==================== 装饰性元素 ==================== */
.divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, var(--luxury-border), transparent);
}

.divider-solid {
  height: 1rpx;
  background-color: var(--luxury-border);
}

.divider-vertical {
  width: 1rpx;
  background-color: var(--luxury-border);
  align-self: stretch;
}

/* 渐变背景 */
.bg-gradient-dark {
  background: linear-gradient(135deg, var(--luxury-black) 0%, var(--luxury-black-light) 100%);
}

.bg-gradient-gold {
  background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
}

/* 光泽效果 */
.shimmer {
  position: relative;
  overflow: hidden;
}

.shimmer::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  20% { left: 200%; }
  100% { left: 200%; }
}

/* ==================== 安全区域 ==================== */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* ==================== 工具组件类 ==================== */

/* 列表项 */
.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-md);
  border-bottom: 1rpx solid var(--luxury-warm-gray);
}

.list-item:last-child {
  border-bottom: none;
}

/* 徽章 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 10rpx;
  font-size: var(--text-xs);
  font-weight: var(--font-semibold);
  border-radius: var(--radius-full);
}

.badge-gold {
  background: var(--luxury-gold);
  color: var(--luxury-white);
}

.badge-dark {
  background: var(--luxury-black);
  color: var(--luxury-white);
}

.badge-error {
  background: var(--color-error);
  color: var(--luxury-white);
}

/* 头像 */
.avatar {
  border-radius: var(--radius-full);
  object-fit: cover;
}

.avatar-xs { width: 48rpx; height: 48rpx; }
.avatar-sm { width: 64rpx; height: 64rpx; }
.avatar-md { width: 96rpx; height: 96rpx; }
.avatar-lg { width: 128rpx; height: 128rpx; }
.avatar-xl { width: 160rpx; height: 160rpx; }

/* 骨架屏 */
.skeleton {
  background: linear-gradient(
    90deg,
    var(--luxury-ivory) 25%,
    var(--luxury-warm-gray) 50%,
    var(--luxury-ivory) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-3xl) var(--space-lg);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--space-md);
  opacity: 0.3;
}

.empty-title {
  font-size: var(--text-lg);
  color: var(--text-secondary);
  margin-bottom: var(--space-xs);
}

.empty-desc {
  font-size: var(--text-sm);
  color: var(--text-muted);
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-lg);
  color: var(--text-muted);
  font-size: var(--text-sm);
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid var(--luxury-border);
  border-top-color: var(--luxury-gold);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: var(--space-sm);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ==================== 打印样式 ==================== */
@media print {
  .no-print { display: none !important; }
}

/* ==================== 减少动效 ==================== */
/* 微信小程序不支持 * 选择器，此媒体查询已禁用 */

/* ==================== 层级三：微交互动画 ==================== */
/* 这些类可以在任何页面中直接使用，无需额外引入 */

/* ① 金额/价格闪烁 — 数字变化时闪金色 */
.price-flash {
  animation: priceFlash 0.6s ease-out;
}

@keyframes priceFlash {
  0% { color: inherit; transform: scale(1); }
  25% { color: #D4A84B; transform: scale(1.08); }
  50% { color: #CA8A04; transform: scale(1.04); }
  100% { color: inherit; transform: scale(1); }
}

/* ② Tab 下划线滑动 */
.tab-indicator {
  position: absolute;
  bottom: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #CA8A04, #D4A84B);
  border-radius: 2rpx;
  transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1), width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ③ 卡片入场淡入（配合 wx:for 使用，支持延迟） */
.card-fade-in {
  animation: cardFadeIn 0.4s ease-out both;
}

@keyframes cardFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 延迟入场（用于列表中不同卡片） */
.card-delay-1 { animation-delay: 50ms; }
.card-delay-2 { animation-delay: 100ms; }
.card-delay-3 { animation-delay: 150ms; }
.card-delay-4 { animation-delay: 200ms; }
.card-delay-5 { animation-delay: 250ms; }

/* ④ 数字变化色闪 — 用于佣金/余额/计数 */
.number-flash {
  animation: numberFlash 0.4s ease-out;
}

@keyframes numberFlash {
  0% { opacity: 0.5; transform: translateY(-8rpx); }
  50% { opacity: 1; color: #CA8A04; }
  100% { opacity: 1; transform: translateY(0); color: inherit; }
}

/* ⑤ 图片按压缩放 — 用于商品图预览 */
.img-pressable:active {
  transform: scale(0.97);
  transition: transform 0.15s ease;
}

/* ⑥ 展开/收起 — 用于可折叠区域 */
.expandable {
  overflow: hidden;
  max-height: 0;
  opacity: 0;
  transition: max-height 0.35s ease-out, opacity 0.25s ease-out, padding 0.35s ease-out;
}

.expandable.expanded {
  max-height: 2000rpx;
  opacity: 1;
}

/* ⑦ badge 计数脉冲 — 购物车/通知角标 */
.badge-pulse {
  animation: badgePulse 0.3s ease-out;
}

@keyframes badgePulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

/* ⑧ 按钮加载态旋转 */
.btn-loading {
  position: relative;
  pointer-events: none;
  opacity: 0.7;
}

.btn-loading::after {
  content: '';
  position: absolute;
  right: 24rpx;
  top: 50%;
  width: 28rpx;
  height: 28rpx;
  margin-top: -14rpx;
  border: 3rpx solid rgba(255,255,255,0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

/* ⑨ 成功/失败状态色条 */
.status-bar-enter {
  animation: statusSlideDown 0.3s ease-out;
}

@keyframes statusSlideDown {
  0% {
    opacity: 0;
    transform: translateY(-100%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
